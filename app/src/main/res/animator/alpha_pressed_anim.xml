<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <objectAnimator
            android:duration="1"
            android:propertyName="alpha"
            android:valueTo="0.0"
            android:valueType="floatType" />
    </item>

    <item>
        <objectAnimator
            android:duration="100"
            android:propertyName="alpha"
            android:valueTo="1.0"
            android:valueType="floatType" />
    </item>

</selector>