<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <style name="WhiteStatusActivity" parent="AppTheme">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="GreyishStatusActivity" parent="AppTheme">
        <item name="colorPrimaryDark">@color/greyish_app_bg</item>
    </style>

    <style name="CollapsingToolbarActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CollapsingToolbarAlphaStatusActivity" parent="AppTheme">
        <item name="android:statusBarColor">@color/black_trans_30</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="StartActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="OldInputField">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="BaseEditText" parent="Models14Text">
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="colorAccent">@color/nice_pink</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="InputField" parent="BaseEditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="colorAccent">@color/nice_pink</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/input_field_bg</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="InputSpinner" parent="InputField">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawableRight">@drawable/spinner_arrow_selector</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/input_field_spinner_bg</item>
    </style>

    <style name="NewInputField" parent="BaseEditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="colorAccent">@color/nice_pink</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/background_rounded_4dp</item>
        <item name="android:elevation">3dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>



<!-- NEW UI FIELDS -->
    <style name="RedesignedBaseEditText" parent="Models15Text">
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="colorAccent">@color/nice_pink</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="RedesignedSpinnerArrow">
        <item name="android:layout_width">@dimen/v_24dp</item>
        <item name="android:layout_height">@dimen/v_24dp</item>
        <item name="android:layout_marginEnd">@dimen/v_12dp</item>
        <item name="android:src">@drawable/spinner_arrow_selector_black</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="RedesignedFieldHeader" parent="Models15Text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/text_15</item>
        <item name="android:textColor">@color/text_gray</item>
        <item name="android:paddingStart">@dimen/v_3_5dp</item>
        <item name="android:paddingEnd">@dimen/v_3_5dp</item>
        <item name="android:layout_marginStart">@dimen/v_12dp</item>
        <item name="android:layout_marginEnd">@dimen/v_12dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="RedesignedInputField" parent="RedesignedBaseEditText">
        <item name="android:minHeight">@dimen/auth_btn_height</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:paddingStart">@dimen/v_16dp</item>
        <item name="android:paddingEnd">@dimen/v_16dp</item>
        <item name="android:paddingTop">@dimen/v_4dp</item>
        <item name="android:paddingBottom">@dimen/v_4dp</item>
        <item name="android:background">@drawable/et_bg_rounded_stroke</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
    </style>

    <style name="RedesignedSpinner" parent="RedesignedInputField">
        <item name="android:paddingEnd">@dimen/v_12dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:background">@null</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="popupTheme">@style/RedesignedSpinnerPopupTheme</item>
        <item name="android:popupBackground">@drawable/spinner_popup_rounded_stroke</item>
    </style>

    <style name="RedesignedSpinnerPopupTheme">
        <item name="android:overScrollMode">never</item>
        <item name="overlapAnchor">false</item>
    </style>

    <style name="RedesignedSpinnerError" parent="Models13Text">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textSize">@dimen/error_text_size</item>
        <item name="android:textColor">@color/nice_red</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_marginBottom">@dimen/v_8dp</item>
    </style>

    <style name="NewInputSpinner" parent="NewInputField">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawableRight">@drawable/spinner_arrow_selector</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/background_rounded_4dp</item>
    </style>


    <style name="InputTitle" parent="OldInputField">
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <style name="RatingBarStyle" parent="Widget.AppCompat.RatingBar.Small">
        <item name="android:progressTint">@color/yellow</item>
        <item name="android:secondaryProgressTint">@color/yellow</item>
        <item name="android:progressBackgroundTint">@color/gray_hint_light</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.1</item>
        <item name="android:isIndicator">false</item>
    </style>

