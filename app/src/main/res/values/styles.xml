<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="WhiteStatusActivity" parent="AppTheme">
        <item name="colorPrimaryDark">@color/white</item>
    </style>

    <style name="GreyishStatusActivity" parent="AppTheme">
        <item name="colorPrimaryDark">@color/greyish_app_bg</item>
    </style>

    <style name="CollapsingToolbarActivity" parent="AppTheme">
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CollapsingToolbarAlphaStatusActivity" parent="AppTheme">
        <item name="android:statusBarColor">@color/black_trans_30</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
    </style>

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0sp</item>
    </style>

    <style name="ToolBarWithNavigationBack">
        <item name="navigationIcon">@drawable/ic_arrow_back</item>
    </style>

    <style name="StartActivity" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/login_button</item>
    </style>

    <style name="OldInputField">
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:background">@drawable/input_background</item>
    </style>

    <style name="BaseEditText" parent="Models14Text">
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="colorAccent">@color/nice_pink</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="InputField" parent="BaseEditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="colorAccent">@color/nice_pink</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColorHint">@color/grey_dark</item>
        <item name="android:background">@drawable/input_field_bg</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="InputSpinner" parent="InputField">
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawableRight">@drawable/spinner_arrow_selector</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/input_field_spinner_bg</item>
    </style>

    <style name="InputTitle" parent="OldInputField">
        <item name="android:textColor">?android:textColorHint</item>
    </style>

    <!-- Text styles -->
    <style name="ModelsText">
        <item name="android:textColor">@color/models_text_color</item>
        <item name="android:textColorHint">@color/gray_hint</item>
        <item name="android:lineSpacingMultiplier">1</item>
    </style>

    <style name="Models10Text" parent="ModelsText">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="Models12Text" parent="ModelsText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Models12BoldText" parent="ModelsText">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Models14Text" parent="ModelsText">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Models13BoldText" parent="ModelsText">
