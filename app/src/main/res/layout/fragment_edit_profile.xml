<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    xmlns:tools="http://schemas.android.com/tools" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navContainer"
        android:layout_width="0dp"
        android:paddingTop="@dimen/v_40dp"
        android:paddingBottom="@dimen/v_4dp"
        android:layout_height="wrap_content"
        android:background="@color/greyish_app_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="@dimen/v_40dp"
            android:layout_height="@dimen/v_40dp"
            android:src="@drawable/chevron_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/editProfileTv"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/text_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textColor="@android:color/black"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="@+id/arrowBack"
            app:layout_constraintBottom_toBottomOf="@id/arrowBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/saveTv"
            style="@style/Models16SemiBoldText"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:paddingEnd="@dimen/v_12dp"
            android:paddingStart="@dimen/v_12dp"
            android:text="@string/save"
            android:enabled="false"
            android:textColor="@color/enabled_gray"
            android:textSize="@dimen/text_16"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/navContainer" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/editProfileTopContainer"
        android:layout_width="0dp"
        android:paddingTop="@dimen/v_16dp"
        android:paddingStart="@dimen/v_16dp"
        android:paddingEnd="@dimen/v_16dp"
        android:paddingBottom="@dimen/v_14dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

<!--    rounded corners 16dp?, centerCrop, placeholder = gray_light  -->
        <ImageView
            android:id="@+id/coverImv"
            android:layout_width="0dp"
            android:layout_height="@dimen/v_152dp"
            tools:tint="@color/gray_light"
            tools:src="@drawable/background_rounded_12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
            android:id="@+id/coverLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/v_8dp"
            android:paddingBottom="@dimen/v_8dp"
            android:paddingStart="@dimen/v_12dp"
            android:paddingEnd="@dimen/v_12dp"
            android:layout_marginTop="@dimen/v_16dp"
            android:layout_marginEnd="@dimen/v_16dp"
            android:background="@drawable/background_rounded_max"
            android:backgroundTint="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/coverImv"
            app:layout_constraintTop_toTopOf="@+id/coverImv">

            <ImageView
                android:id="@+id/coverTvImv"
                android:layout_width="@dimen/v_12dp"
                android:layout_height="@dimen/v_12dp"
                android:src="@drawable/add"
                android:tint="@color/text_gray"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/v_2dp"/>

            <TextView
                android:id="@+id/coverTv"
                style="@style/Models14SemiBoldText"
                android:textSize="@dimen/text_14"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/add_cover_image" />

        </LinearLayout>

<!--   onClick: call userImgContainer onClick     -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/userImgContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/coverImv"
            app:layout_constraintBottom_toBottomOf="@id/coverImv" >

            <com.square.android.ui.view.CircleImageView
                android:id="@+id/userImg"
                android:layout_width="@dimen/v_112dp"
                android:layout_height="@dimen/v_112dp"
                android:background="@drawable/round_background"
                android:cropToPadding="false"
                android:padding="@dimen/v_3dp"
                android:scaleType="centerCrop"
                android:backgroundTint="@android:color/white"
                tools:tint="@color/gray_light"
                tools:src="@drawable/round_background"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

<!--    TODO: onClick: call userImg.onClick        -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iconPhoto"
                android:layout_width="@dimen/v_28dp"
                android:layout_height="@dimen/v_28dp"
                android:layout_marginBottom="@dimen/v_4dp"
                android:src="@drawable/photo_icon"
                android:padding="@dimen/v_6dp"
                android:layout_marginEnd="@dimen/v_4dp"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/gray_light"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <ImageView
            android:id="@+id/iconAddPhoto"
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:src="@drawable/add_photo_icon"
            android:tint="@color/text_gray"
            app:layout_constraintTop_toTopOf="@+id/userImgContainer"
            app:layout_constraintBottom_toBottomOf="@+id/userImgContainer"
            app:layout_constraintStart_toStartOf="@+id/userImgContainer"
            app:layout_constraintEnd_toEndOf="@id/userImgContainer" />

<!--   TODO:F log out probably will be in other fragment  -->
        <TextView
            android:id="@+id/editProfileLogout"
            style="@style/Models16SemiBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/v_2dp"
            android:textSize="@dimen/text_16"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="128dp"
            tools:text="@string/log_out" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/gray_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editProfileTopContainer" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileMainNested"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@+id/divider2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingTop="@dimen/v_24dp"
            android:paddingStart="@dimen/v_24dp"
            android:paddingEnd="@dimen/v_24dp"
            android:paddingBottom="@dimen/v_24dp"
            android:orientation="vertical"
            android:layout_height="wrap_content" >

<!--    TODO:F Switches will be added later, in other fragment?       -->

