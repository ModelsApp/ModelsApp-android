            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_rl_height">
                <com.square.android.utils.widget.ErrorEditText
                    style="@style/RedesignedInputField"
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName" />
                <TextView
                    style="@style/RedesignedFieldHeader"
                    android:text="@string/hint_name" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/et_rl_height"
                android:layout_marginTop="@dimen/v_24dp" >
                <com.square.android.utils.widget.ErrorEditText
                    style="@style/RedesignedInputField"
                    android:id="@+id/et_surname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:imeOptions="actionNext"
                    android:inputType="textPersonName" />
                <TextView
                    style="@style/RedesignedFieldHeader"
                    android:text="@string/hint_surname" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v_24dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/nationalityError"
                    style="@style/RedesignedSpinnerError"
                    tools:visibility="visible"
                    android:text="@string/select_nationality" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/et_rl_height" >
                    <LinearLayout
                        android:id="@+id/nationalityLl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/et_bg_rounded_stroke"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true" >
                        <androidx.appcompat.widget.AppCompatSpinner
                            style="@style/RedesignedSpinner"
                            android:id="@+id/spinnerNationality"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:spinnerMode="dropdown" />

                        <ImageView style="@style/RedesignedSpinnerArrow" />

                    </LinearLayout>
                    <TextView
                        style="@style/RedesignedFieldHeader"
                        android:text="@string/nationality" />
                </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v_24dp"
                android:gravity="bottom"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="@dimen/v_12dp"
                    android:layout_weight="0.5" >

                    <TextView
                        android:id="@+id/dateOfBirthError"
                        style="@style/RedesignedSpinnerError"
                        tools:visibility="visible"
                        android:text="@string/select_date_of_birth" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/et_rl_height"
                        android:layout_weight="0.5" >
                        <TextView
                            style="@style/RedesignedInputField"
                            android:id="@+id/tvDateOfBirth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <TextView
                            style="@style/RedesignedFieldHeader"
                            android:text="@string/hint_birth" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="0.5"
                    android:layout_marginStart="@dimen/v_12dp" >

                    <TextView
                        android:id="@+id/genderError"
                        style="@style/RedesignedSpinnerError"
                        tools:visibility="visible"
                        android:text="@string/select_gender" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/et_rl_height" >
                        <LinearLayout
                            android:id="@+id/genderLl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/et_bg_rounded_stroke"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true" >
                            <androidx.appcompat.widget.AppCompatSpinner
                                style="@style/RedesignedSpinner"
                                android:id="@+id/spinnerGender"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:spinnerMode="dropdown" />

                            <ImageView style="@style/RedesignedSpinnerArrow" />

                        </LinearLayout>
                        <TextView
                            style="@style/RedesignedFieldHeader"
                            android:text="@string/hint_gender" />
                    </RelativeLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>