<?xml version="1.0" encoding="utf-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_rounded_top_16dp"
        android:paddingBottom="@dimen/v_32dp" >

        <View
            android:id="@+id/view"
            android:layout_width="@dimen/v_48dp"
            android:layout_height="@dimen/v_6dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_rounded_max"
            android:backgroundTint="@color/gray_btn_disabled"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView4"
            style="@style/Models18SemiBoldText"
            android:textSize="@dimen/text_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginTop="@dimen/v_16dp"
            android:text="@string/city"
            android:textColor="@color/text_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/citiesRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="vertical"
            android:overScrollMode="never"
            android:paddingStart="@dimen/v_24dp"
            android:paddingEnd="@dimen/v_24dp"
            android:layout_marginTop="@dimen/v_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_rounded_checkable"
            tools:itemCount="1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>