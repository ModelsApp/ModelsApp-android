<?xml version="1.0" encoding="utf-8"?>
<com.square.android.utils.widget.CheckableLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/availabilityContainer"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/v_16dp"
    android:paddingBottom="@dimen/v_16dp"
    android:paddingStart="@dimen/v_12dp"
    android:paddingEnd="@dimen/v_12dp"
    android:minWidth="@dimen/v_96dp"
    android:gravity="center_horizontal"
    android:background="@drawable/availability_bg" >

    <ImageView
        android:id="@+id/availabilityIc"
        android:layout_width="@dimen/v_24dp"
        android:layout_height="@dimen/v_24dp"
        android:tint="@color/checked_black_gray"
        android:src="@drawable/r_shop" />

    <CheckedTextView
        android:id="@+id/availabilityName"
        style="@style/Models15SemiBoldText"
        android:layout_marginTop="@dimen/v_12dp"
        android:textSize="@dimen/text_15"
        android:textColor="@color/checked_black_gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Guys only" />

</com.square.android.utils.widget.CheckableLinearLayout>