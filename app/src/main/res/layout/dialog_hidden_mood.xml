<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/v_12dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/v_24dp"
        android:paddingEnd="@dimen/v_24dp"
        android:paddingTop="@dimen/v_20dp"
        android:paddingBottom="@dimen/v_24dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/icClose"
            android:layout_width="@dimen/v_32dp"
            android:layout_height="@dimen/v_32dp"
            android:layout_marginEnd="@dimen/v_minus_4dp"
            android:padding="@dimen/v_2dp"
            android:src="@drawable/close_x"
            android:layout_gravity="end" />

        <RelativeLayout
            android:layout_width="@dimen/v_50dp"
            android:layout_height="@dimen/v_50dp"
            android:background="@drawable/bg_round_stroke"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="@dimen/v_20dp"
                android:layout_height="@dimen/v_20dp"
                android:src="@drawable/r_shop" />
        </RelativeLayout>

        <TextView
            android:id="@+id/moodTv"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/v_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/hidden_mood_on"
            android:gravity="center_horizontal" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_1dp"
            android:layout_marginTop="@dimen/v_24dp"
            android:layout_marginStart="@dimen/v_minus_24dp"
            android:layout_marginEnd="@dimen/v_minus_24dp"
            android:background="@color/gray_divider" />

        <TextView
            android:id="@+id/moodDesc"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/text_16"
            android:textColor="@color/text_gray"
            android:layout_marginTop="@dimen/v_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="@string/hidden_mood_on_text"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/btnSure"
            style="@style/Models16Text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_btn_height"
            android:layout_marginTop="@dimen/v_40dp"
            android:background="@drawable/background_rounded_12dp"
            android:backgroundTint="@android:color/black"
            android:text="@string/lets_do_it"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_16" />

        <CheckBox
            android:id="@+id/moodCb"
            style="@style/Models15Text"
            android:textSize="@dimen/text_15"
            android:textColor="@color/text_gray"
            android:layout_marginTop="@dimen/v_20dp"
            android:visibility="visible"
            android:checked="false"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/signup_checkbox_size"
            android:layout_gravity="center_horizontal"
            android:scaleX="@dimen/signup_checkbox_scale"
            android:scaleY="@dimen/signup_checkbox_scale"
            android:text="@string/dont_show_me_this"
            android:buttonTint="@color/checkbox_colors" />

    </LinearLayout>

</androidx.cardview.widget.CardView>