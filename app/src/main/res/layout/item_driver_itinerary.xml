<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itineraryMainContainer"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/itineraryIcon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_circle_no" />

    <ImageView
        android:id="@+id/itineraryLine"
        android:layout_width="6dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/itineraryIcon"
        app:layout_constraintStart_toStartOf="@id/itineraryIcon"
        app:layout_constraintTop_toBottomOf="@+id/itineraryIcon"
        tools:background="@color/nice_pink" />

<!-- Pick up -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        tools:visibility="gone"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toEndOf="@+id/itineraryIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/itineraryTitle"
            style="@style/Models20BoldText"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:includeFontPadding="false"
            tools:text="Pick up 1" />

        <com.square.android.utils.widget.CheckableLinearLayout
            android:id="@+id/itineraryContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/item_event_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/itineraryIcon"
            app:layout_constraintTop_toBottomOf="@+id/itineraryTitle" >

            <com.square.android.ui.view.CircleImageView
                android:id="@+id/itineraryImage"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:adjustViewBounds="true"
                android:background="@drawable/circle_white"
                android:cropToPadding="false"
                android:scaleType="centerCrop"
                tools:src="@drawable/r_dial" />

            <LinearLayout
                android:id="@+id/itineraryContainerDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/itineraryName"
                    style="@style/Models16BoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Anna Markova" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/r_discount" />

                    <TextView
                        android:id="@+id/itineraryAddress"
                        style="@style/Models13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/secondary_text"
                        tools:text="Via Gregorio 11" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/r_discount" />

                    <TextView
                        android:id="@+id/itineraryTime"
                        style="@style/Models13Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:includeFontPadding="false"
                        android:textColor="@color/secondary_text"
                        tools:text="09:00 pm - 9:30 pm" />
                </LinearLayout>

            </LinearLayout>

        </com.square.android.utils.widget.CheckableLinearLayout>

    </LinearLayout>

<!-- Transfer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/itineraryTransferContainer"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itineraryIcon" >

        <TextView
            android:id="@+id/itineraryTransfer"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:gravity="center_vertical"
            android:text="@string/transfer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/itinerarySecondary"
            style="@style/Models15BoldText"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@color/gray_hint_light"
            app:layout_constraintBottom_toBottomOf="@+id/itineraryTransfer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/itineraryTransfer"
            tools:text="11:45 pm" />

        <TextView
            android:id="@+id/itineraryNameFrom"
            style="@style/Models16BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="7.5dp"
            android:paddingEnd="4dp"
            android:gravity="center_vertical"
            app:layout_constrainedWidth="true"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itineraryTransfer"
            app:layout_constraintEnd_toStartOf="@+id/itineraryGuideline"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="La perla d'Oro" />

        <ImageView
            android:id="@+id/itineraryArrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/arrow_right"
            android:tint="@android:color/black"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toBottomOf="@+id/itineraryNameFrom"
            app:layout_constraintEnd_toStartOf="@+id/itineraryGuideline"
            app:layout_constraintStart_toEndOf="@+id/itineraryNameFrom"
            app:layout_constraintTop_toTopOf="@+id/itineraryNameFrom" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/itineraryGuideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <TextView
            android:id="@+id/itineraryNameTo"
            style="@style/Models16BoldText"
            android:paddingStart="4dp"
            android:layout_width="0dp"
            android:layout_marginBottom="20dp"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp"
            tools:text="Just Cavalli"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/itineraryTransfer"
            app:layout_constraintStart_toEndOf="@+id/itineraryArrow"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" />
    </androidx.constraintlayout.widget.ConstraintLayout>

<!-- Drop off -->
    <LinearLayout
        android:id="@+id/itineraryDropOffContainer"
        android:visibility="gone"
        tools:visibility="gone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/itineraryIcon" >

        <TextView
            android:id="@+id/itineraryDropOff"
            style="@style/Models16BoldText"
            android:layout_width="wrap_content"
            android:layout_height="27dp"
            android:gravity="center_vertical"
            tools:text="Drop off @ La Perla d'Oro" />

        <TextView
            android:id="@+id/itineraryDropOffAddress"
            style="@style/Models16Text"
            android:layout_marginTop="8dp"
            android:textColor="@color/secondary_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:gravity="center_vertical"
            tools:text="Via Paruccini 13 - Milan" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>