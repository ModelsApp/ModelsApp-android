<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp" >

        <ImageView
            android:id="@+id/offerDialogImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@color/greyish_app_bg"
            app:layout_constraintDimensionRatio="1.25:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/offerClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/round_background"
            android:backgroundTint="@android:color/white"
            android:padding="4dp"
            android:src="@drawable/close_x"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/offerDialogName"
            style="@style/Models22Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            app:layout_constraintEnd_toStartOf="@+id/offerDialogInfo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offerDialogImg"
            app:layout_goneMarginEnd="16dp"
            tools:text="Pasta Menu" />

        <ImageView
            android:id="@+id/offerDialogInfo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_info"
            android:layout_marginEnd="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/offerDialogName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/offerDialogName" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:background="@color/gray_divider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offerDialogInfo" />

        <TextView
            android:id="@+id/offerDialogQt"
            style="@style/Models18Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/qt"
            android:visibility="gone"
            tools:visibility="visible"
            android:layout_marginTop="16dp"
            android:textColor="@color/gray_hint"
            app:layout_constraintEnd_toEndOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <TextView
            android:id="@+id/offerDialogDetails"
            style="@style/Models18Text"
            android:textColor="@color/gray_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/details"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <com.square.android.utils.widget.ScrollViewMaxHeight
            android:id="@+id/scrollViewMaxHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:overScrollMode="never"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:visibility="gone"
            android:requiresFadingEdge="vertical"
            tools:visibility="visible"
            android:scrollbars="none"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/offerDialogDetails"
            app:max_height="116dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@android:color/white"
                android:layout_height="250dp" >

                <TextView
                    android:id="@+id/offerNames"
                    style="@style/Models18Text"
                    android:layout_width="0dp"
                    android:layout_weight=".9"
                    android:lineSpacingExtra="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    tools:text="Plate of pasta" />

                <TextView
                    android:id="@+id/offerNumbers"
                    style="@style/Models18Text"
                    android:layout_weight=".1"
                    android:layout_width="0dp"
                    android:lineSpacingExtra="12dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    tools:text="21" />

            </LinearLayout>
        </com.square.android.utils.widget.ScrollViewMaxHeight>

        <TextView
            android:id="@+id/offerDialogCreditsLabel"
            style="@style/Models18BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:includeFontPadding="false"
            android:text="@string/total_credits"
            app:layout_constraintBottom_toBottomOf="@+id/offerDialogCredits"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/offerDialogCredits" />

        <TextView
            android:id="@+id/offerDialogCredits"
            style="@style/Models22BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:textColor="@color/placesPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/scrollViewMaxHeight"
            tools:text="50" />

        <Button
            android:id="@+id/dinnerOffersNext"
            style="@style/Models16BoldText"
            android:layout_width="196dp"
            android:layout_height="44dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/nice_button_red_pink_alpha"
            android:text="@string/confirm"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/offerDialogCredits"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>