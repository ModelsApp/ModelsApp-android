<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/v_24dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/v_48dp" >

        <ImageView
            android:id="@+id/mapPlaceInfoImage"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:scaleType="centerCrop"
            tools:srcCompat="@tools:sample/backgrounds/scenic[8]" />

<!--   TODO: taLayout on top of mainContent and rv in place of mapPlaceInfoImage  -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainContent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_180dp"
            android:background="@drawable/bg_rounded_top_24dp"
            app:layout_constraintVertical_bias="1.0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <TextView
                android:id="@+id/title"
                style="@style/Models18BoldText"
                android:textSize="@dimen/text_18"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_24dp"
                android:layout_marginEnd="@dimen/v_20dp"
                android:maxLines="2"
                android:ellipsize="end"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/placeRatingLl"
                tools:text="Discoteca Fridays" />

            <LinearLayout
                android:id="@+id/placeRatingLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/v_20dp"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@+id/title"
                app:layout_constraintBottom_toBottomOf="@+id/title"
                app:layout_constraintEnd_toEndOf="parent" >

                <ImageView
                    android:layout_width="@dimen/v_16dp"
                    android:layout_height="@dimen/v_16dp"
                    android:src="@drawable/ic_star"
                    android:tint="@color/text_gray_dark" />

                <TextView
                    android:id="@+id/placeRatingTv"
                    style="@style/Models14Text"
                    android:textColor="@color/text_gray_dark"
                    android:layout_marginStart="@dimen/v_4dp"
                    android:textSize="@dimen/text_14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="4.5" />

            </LinearLayout>

<!--     TODO: add padding top 12 if icText is visible ELSE remove padding top       -->
            <LinearLayout
                android:id="@+id/iconLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rounded_8dp"
                android:backgroundTint="@color/gray_divider"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/v_20dp"
                tools:paddingTop="@dimen/v_12dp"
                android:minWidth="@dimen/v_48dp"
                android:minHeight="@dimen/v_48dp"
                app:layout_constraintTop_toTopOf="@+id/contentLl"
                app:layout_constraintBottom_toBottomOf="@+id/contentLl"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:id="@+id/ic"
                    android:layout_width="@dimen/v_24dp"
                    android:layout_height="@dimen/v_24dp"
                    android:src="@drawable/r_pin" />

                <TextView
                    android:id="@+id/icText"
                    style="@style/Models15Text"
                    android:textSize="@dimen/text_15"
                    android:layout_marginTop="@dimen/v_12dp"
                    android:paddingStart="@dimen/v_10dp"
                    android:paddingEnd="@dimen/v_10dp"
                    android:paddingBottom="@dimen/v_12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="$3,500" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/contentLl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_24dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/iconLl" >

                <LinearLayout
                    android:id="@+id/eventPlaceNameLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:visibility="visible"
                    android:gravity="center_vertical"
                    android:visibility="gone" >
                    <ImageView
                        android:layout_width="@dimen/v_20dp"
                        android:layout_height="@dimen/v_20dp"
                        android:src="@drawable/i_marker" />
                    <TextView
                        android:id="@+id/eventPlaceNameTv"
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_8dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="The Conga Room"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/addressLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:visibility="visible"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_16dp"
                    android:visibility="gone" >
                    <ImageView
                        android:layout_width="@dimen/v_20dp"
                        android:layout_height="@dimen/v_20dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        android:id="@+id/addressTv"
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="@dimen/v_8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="The Conga Room"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/distanceLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:visibility="visible"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_16dp"
                    android:visibility="gone" >
                    <ImageView
                        android:layout_width="@dimen/v_20dp"
                        android:layout_height="@dimen/v_20dp"
                        android:src="@drawable/r_curve_arrow" />
                    <TextView
                        android:id="@+id/distanceTv"
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="@dimen/v_8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="14.5 km"
                        android:layout_weight="1" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dateLl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:visibility="visible"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_16dp"
                    android:visibility="gone" >
                    <ImageView
                        android:layout_width="@dimen/v_20dp"
                        android:layout_height="@dimen/v_20dp"
                        android:src="@drawable/b_calendar" />
                    <TextView
                        android:id="@+id/dateTv"
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_marginStart="@dimen/v_8dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        tools:text="Dec 11 (14:00) - Dec 12 (13:00)"
                        android:layout_weight="1" />
                </LinearLayout>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>