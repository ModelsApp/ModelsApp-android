<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/v_16dp" >

    <View
        android:id="@+id/itemDivider"
        android:layout_width="0dp"
        android:layout_marginStart="@dimen/v_minus_24dp"
        android:layout_marginEnd="@dimen/v_minus_24dp"
        android:layout_height="1dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:background="@color/gray_divider"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@+id/itemLabel"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/itemImg"
        android:layout_width="@dimen/v_24dp"
        android:layout_height="@dimen/v_24dp"
        android:layout_marginTop="@dimen/v_16dp"
        app:layout_constraintTop_toBottomOf="@id/itemDivider"
        android:src="@drawable/facebook_logo"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/itemLabel"
        style="@style/Models16Text"
        android:textSize="@dimen/text_16"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facebook"
        android:layout_marginStart="@dimen/v_24dp"
        app:layout_constraintTop_toTopOf="@id/itemImg"
        app:layout_constraintBottom_toBottomOf="@id/itemImg"
        app:layout_constraintStart_toEndOf="@id/itemImg" />

    <TextView
        android:id="@+id/itemTv"
        style="@style/Models15Text"
        android:layout_width="wrap_content"
        app:layout_constrainedWidth="true"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/v_8dp"
        app:layout_goneMarginStart="@dimen/v_8dp"
        android:layout_marginStart="@dimen/v_16dp"
        android:gravity="center_vertical"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_15"
        android:maxLines="1"
        app:autoSizeTextType="uniform"
        app:layout_constraintBottom_toBottomOf="@id/itemImg"
        app:layout_constraintEnd_toStartOf="@+id/itemIc"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/itemLabel"
        app:layout_constraintTop_toTopOf="@id/itemImg"
        tools:text="\@accountname"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/itemIc"
        android:layout_width="@dimen/v_24dp"
        android:layout_height="@dimen/v_24dp"
        android:src="@drawable/add"
        app:layout_constraintTop_toTopOf="@id/itemImg"
        app:layout_constraintBottom_toBottomOf="@id/itemImg"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>