<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    tools:background="@android:color/white" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/v_24dp"
        android:layout_height="@dimen/v_24dp"
        android:layout_marginTop="@dimen/v_16dp"
        android:layout_marginStart="@dimen/v_24dp"
        android:layout_marginBottom="@dimen/v_16dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/r_shop" />

    <TextView
        android:id="@+id/title"
        style="@style/Models16SemiBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/v_14dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/text_16"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/icon"
        app:layout_constraintStart_toEndOf="@+id/icon"
        app:layout_constraintTop_toTopOf="@id/icon"
        app:layout_goneMarginStart="0dp"
        tools:text="Social channels" />

    <ImageView
        android:id="@+id/arrow"
        android:src="@drawable/chevron_right"
        android:layout_width="@dimen/v_24dp"
        android:layout_height="@dimen/v_24dp"
        android:layout_marginEnd="@dimen/v_17dp"
        tools:visibility="visible"
        android:visibility="gone"
        android:stateListAnimator="@animator/alpha_pressed_anim"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@+id/title" />

    <TextView
        android:id="@+id/tv"
        style="@style/Models16Text"
        android:textSize="@dimen/text_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/v_6dp"
        android:layout_marginStart="@dimen/v_30dp"
        android:textColor="@color/text_gray"
        android:visibility="gone"
        android:maxLines="1"
        android:gravity="center"
        app:autoSizeTextType="uniform"
        app:autoSizeMaxTextSize="@dimen/text_16"
        app:autoSizeMinTextSize="@dimen/text_12"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toBottomOf="@+id/title"
        app:layout_constraintEnd_toStartOf="@+id/arrow"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/title"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_goneMarginEnd="0dp"
        tools:text="2.500"
        tools:visibility="visible" />

    <View
        android:id="@+id/clickView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/v_20dp"
        tools:layout_marginEnd="128dp"
        android:visibility="gone"
        tools:visibility="visible"
        android:paddingStart="@dimen/v_8dp"
        android:paddingEnd="@dimen/v_4dp"
        android:paddingTop="@dimen/v_8dp"
        android:paddingBottom="@dimen/v_8dp"
        app:layout_constraintTop_toTopOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="@id/title"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:layout_width="@dimen/v_16dp"
            android:layout_height="@dimen/v_16dp"
            android:src="@drawable/add"
            android:tint="@color/gray_hint_light" />

        <TextView
            style="@style/Models14SemiBoldText"
            android:textSize="@dimen/text_14"
            android:textColor="@color/gray_hint_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:text="@string/add"/>

    </LinearLayout>

   <LinearLayout
       android:id="@+id/divider"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintHorizontal_bias="0.0"
       android:visibility="gone"
       tools:visibility="visible"
       android:paddingTop="@dimen/v_4dp"
       android:paddingBottom="@dimen/v_4dp"
       app:layout_constraintStart_toStartOf="parent" >

       <View
           android:layout_width="match_parent"
           android:layout_height="1.5dp"
           android:background="@color/gray_light"
           android:layout_marginStart="@dimen/v_24dp" />

   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>