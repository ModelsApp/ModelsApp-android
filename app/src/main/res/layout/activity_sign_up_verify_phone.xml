<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="false"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="@dimen/v_40dp"
        android:layout_height="@dimen/v_40dp"
        android:layout_marginTop="@dimen/v_40dp"
        android:src="@drawable/chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginStart="@dimen/v_24dp"
        android:layout_marginEnd="@dimen/v_24dp"
        android:layout_marginTop="@dimen/v_64dp"
        app:layout_constraintTop_toBottomOf="@+id/arrowBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            style="@style/Models20BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="@string/enter_security_code"
            android:textSize="@dimen/text_20" />

        <TextView
            style="@style/Models16Text"
            android:textSize="@dimen/text_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_12dp"
            android:text="@string/we_sent_security_code"
            android:textColor="@color/text_gray_dark" />

        <TextView
            android:id="@+id/phoneNumberTv"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/v_1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="+1 432 546 5480" />

        <com.alimuzaffar.lib.pin.PinEntryEditText
            android:id="@+id/txt_pin_entry"
            style="@style/Models24SemiBoldText"
            android:textSize="@dimen/text_24"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/v_64dp"
            android:layout_marginEnd="@dimen/v_64dp"
            android:layout_marginTop="@dimen/v_28dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:digits="1234567890"
            android:inputType="number"
            android:maxLength="4"
            android:textIsSelectable="false"
            app:pinTextBottomPadding="@dimen/v_16dp"
            app:pinLineStroke="@dimen/v_1_5dp"
            app:pinLineStrokeSelected="@dimen/v_1_5dp"
            app:pinLineColors="@color/pin_focus_colors" />

        <TextView
            android:id="@+id/codeError"
            style="@style/RedesignedSpinnerError"
            android:layout_marginTop="@dimen/v_2dp"
            tools:visibility="visible"
            android:visibility="invisible"
            android:gravity="center_horizontal"
            android:text="@string/invalid_security_code" />

        <TextView
            android:id="@+id/sendAgain"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/text_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/v_6dp"
            android:layout_marginTop="@dimen/v_8dp"
            android:enabled="false"
            tools:text="@string/send_again"
            android:textColor="@color/enabled_disabled_text" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>