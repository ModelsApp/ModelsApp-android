<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingBottom="32dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        tools:background="@android:color/white" >

<!--   TODO round corners: top-let top-right bottom-left    -->
        <ImageView
            android:id="@+id/userImg"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="centerCrop"
            tools:src="@drawable/fill_profile_header_1"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/userName"
            style="@style/Models20SemiBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:maxLines="2"
            app:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userImg"
            app:layout_constraintTop_toTopOf="@+id/userImg"
            tools:text="Anna\nMarkova" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSocials"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never"
            app:layout_constraintBottom_toTopOf="@+id/memberLabel"
            app:layout_constraintEnd_toEndOf="@+id/userName"
            app:layout_constraintStart_toStartOf="@+id/userName"
            app:layout_constraintTop_toBottomOf="@+id/userName"
            tools:background="@color/gray_hint"
            tools:layout_height="24dp" />

        <TextView
            android:id="@+id/memberLabel"
            style="@style/Models16Text"
            android:textColor="@color/gray_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:lineSpacingExtra="2dp"
            android:maxLines="2"
            app:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            app:layout_constraintBottom_toBottomOf="@+id/userImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userImg"
            tools:text="Basic Member\nLevel 7" />

        <ImageView
            android:id="@+id/icMedal"
            android:layout_width="32dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="108dp"
            android:visibility="invisible"
            tools:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/memberLabel"
            app:layout_constraintTop_toTopOf="@+id/userImg"
            tools:scaleType="fitXY"
            tools:src="@drawable/gold_medal" />

        <FrameLayout
            android:id="@+id/statusLl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toTopOf="@+id/icMedal"
            app:layout_constraintStart_toStartOf="@+id/icMedal"
            app:layout_constraintEnd_toEndOf="@id/icMedal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/round_background"
                android:backgroundTint="@android:color/white" />
            <ImageView
                android:id="@+id/statusCircle"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="center"
                android:background="@drawable/round_background"
                android:backgroundTint="@color/status_green" />
        </FrameLayout>

<!--   TODO rv with item_profile    -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvItems"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userImg"
            tools:listitem="@layout/item_profile"
            tools:itemCount="3"
            tools:background="@color/gray_hint" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="48dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/rvItems"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <TextView
                android:id="@+id/tutorialsTv"
                style="@style/Models15SemiBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tutorials" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/round_background"
                android:tint="@color/gray_hint_light" />

            <TextView
                android:id="@+id/termsTv"
                style="@style/Models15SemiBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_" />

            <ImageView
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/round_background"
                android:tint="@color/gray_hint_light" />

            <TextView
                android:id="@+id/privacyTv"
                style="@style/Models15SemiBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>






