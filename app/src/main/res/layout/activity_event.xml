<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventRoot"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/eventAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/eventCollapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            app:contentScrim="@android:color/white"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax">

                <ImageView
                    android:id="@+id/eventMainImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/toolbar_image_height"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    android:background="@color/placeholder"
                    tools:src="@drawable/fill_profile_header_1" />
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/eventToolbar"
                android:layout_width="match_parent"
                android:layout_height="@dimen/toolbarHeight"
                android:layout_marginTop="@dimen/statusMargin"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:title="@null"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <ImageView
                    android:id="@+id/eventArrowBack"
                    android:layout_width="@dimen/backArrowSize"
                    android:layout_height="@dimen/backArrowSize"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_marginStart="@dimen/backArrowMarginStart"
                    android:src="@drawable/ic_arrow_back"
                    android:tint="@android:color/white" />
            </androidx.appcompat.widget.Toolbar>

            <TextView
                android:id="@+id/eventName"
                style="@style/Models24Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:layout_marginStart="@dimen/ac_place_default_margin"
                android:layout_marginEnd="@dimen/ac_place_default_margin"
                tools:text="Just Cavalli" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/eventNested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:paddingBottom="104dp"
        android:background="@android:color/white"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!--////////// Location //////////-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/eventAddressCl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <ImageView
                    android:id="@+id/eventPinImage"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/ac_place_default_margin"
                    android:src="@drawable/r_pin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/eventAddress" />

                <ImageView
                    android:id="@+id/eventDistanceImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="@dimen/ac_place_default_margin"
                    android:src="@drawable/r_sign"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/eventAddress" />

                <TextView
                    android:id="@+id/eventAddress"
                    style="@style/Models16Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/eventDistance"
                    app:layout_constraintStart_toEndOf="@+id/eventPinImage"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Via Vigevano, 13\n20127, Milan" />

                <TextView
                    android:id="@+id/eventDistance"
                    style="@style/Models16Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:minWidth="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/eventDistanceImage"
                    app:layout_constraintTop_toBottomOf="@+id/eventDistanceImage"
                    tools:text="150" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/separatorTwo"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginStart="@dimen/ac_place_default_margin"
                android:layout_marginEnd="@dimen/ac_place_default_margin"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventAddressCl" />

            <FrameLayout
                android:id="@+id/eventContainer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintVertical_bias="0"
                android:visibility="gone"
                tools:visibility="visible"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separatorTwo" />

            <View
                android:id="@+id/additionalPadding"
                android:layout_width="match_parent"
                android:layout_height="84dp"
                android:layout_marginStart="@dimen/ac_place_default_margin"
                android:layout_marginEnd="@dimen/ac_place_default_margin"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/eventContainer" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/eventProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/nice_red"
        android:layout_gravity="center"
        android:layout_marginTop="160dp"
        android:visibility="gone"
        tools:visibility="visible" />

    <!--////////// Booking //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventBookingCl"
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:background="@android:color/white"
        app:layout_anchorGravity="bottom"
        android:clipToPadding="false"
        android:paddingBottom="20dp" >

        <Button
            android:id="@+id/eventBookingBtn"
            style="@style/Models16Text"
            android:layout_width="112dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:background="@drawable/nice_button_red_pink_alpha"
            android:enabled="false"
            android:text="@string/book_now"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toStartOf="@+id/eventBookProgress"
            app:layout_constraintTop_toTopOf="@+id/eventBookingImv"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ProgressBar
            android:id="@+id/eventBookProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:indeterminateTint="@color/nice_red"
            android:layout_gravity="center"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/eventBookingImv"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/eventBookingImv"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:src="@drawable/r_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/separatorBooking" />

        <TextView
            android:id="@+id/eventBookingText"
            style="@style/Models14BoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:hint="@string/select_timeframe"
            android:maxLines="1"
            android:textColorHint="@color/gray_hint_light"
            app:layout_constraintEnd_toStartOf="@+id/eventBookingBtn"
            app:layout_constraintStart_toEndOf="@+id/eventBookingImv"
            app:layout_constraintTop_toBottomOf="@+id/eventBookingDate" />

        <TextView
            android:id="@+id/eventBookingDate"
            style="@style/Models16Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:ellipsize="end"
            app:layout_constraintEnd_toStartOf="@+id/eventBookingBtn"
            app:layout_constraintStart_toEndOf="@+id/eventBookingImv"
            app:layout_constraintTop_toTopOf="@+id/eventBookingImv"
            tools:text="Monday, May 7th" />

        <View
            android:id="@+id/separatorBooking"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/divider"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>