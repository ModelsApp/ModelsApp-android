<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/profileRoot"
    android:layout_width="match_parent"
    android:background="@android:color/white"
    android:layout_height="match_parent" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/profileAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/profileCollapsing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@android:color/white"
            app:contentScrim="@android:color/white"
            app:scrimAnimationDuration="200"
            app:scrimVisibleHeightTrigger="@dimen/profile_scrimVisibleHeightTrigger"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_collapseMode="parallax" >

                <ImageView
                    android:id="@+id/profileBgImage"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_bgImageSize"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    android:background="@color/placeholder"
                    android:src="@drawable/fill_profile_header_2" />
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/profileToolbar"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/statusMargin"
                android:layout_height="@dimen/profile_toolbarHeight"
                android:fitsSystemWindows="false"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:title="@null"
                android:gravity="top"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/profile_iconsPadding"
                    android:layout_marginEnd="@dimen/profile_iconsPadding" >

                    <ImageView
                        android:id="@+id/iconSettings"
                        android:layout_width="@dimen/profile_iconsSize"
                        android:layout_height="@dimen/profile_iconsSize"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:padding="@dimen/profile_iconsInsidePadding"
                        android:tint="@android:color/white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_settings" />

                    <ImageView
                        android:id="@+id/iconNotifications"
                        android:layout_width="@dimen/profile_iconsSize"
                        android:layout_height="@dimen/profile_iconsSize"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:padding="@dimen/profile_iconsInsidePadding"
                        android:tint="@android:color/white"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/ic_notifications" />
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:layout_gravity="bottom" >

                <View
                    android:id="@+id/roundedView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/profile_roundedViewHeight"
                    android:layout_gravity="bottom"
                    android:background="@drawable/bg_rounded_top_24dp" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:background="@android:color/white"
                    android:layout_height="wrap_content" >

                    <!--    height = 64(final resized image size)        -->
                    <LinearLayout
                        android:id="@+id/imageContainer"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/profile_resizedImageSize"
                        android:clipChildren="false"
                        android:clipToPadding="false"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/profile_topPadding"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <com.square.android.ui.view.CircleImageView
                            android:id="@+id/userImg"
                            android:layout_width="@dimen/profile_imageSize"
                            android:layout_height="@dimen/profile_imageSize"
                            android:background="@drawable/round_background"
                            android:tint="@color/white"
                            android:cropToPadding="false"
                            android:padding="@dimen/profile_imageBorderSize"
                            android:scaleType="centerCrop"
                            android:layout_marginTop="@dimen/profile_imageInitialMarginTop"
                            android:backgroundTint="@android:color/white"
                            tools:tint="@color/nice_pink"
                            tools:src="@drawable/round_background" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/userLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/profile_defaultPadding"
                        android:layout_marginEnd="@dimen/profile_defaultPadding"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        tools:visibility="visible"
                        app:layout_constraintTop_toTopOf="@+id/imageContainer"
                        app:layout_constraintBottom_toBottomOf="@+id/imageContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center_horizontal">

                            <TextView
                                android:id="@+id/userName"
                                style="@style/Models16SemiBoldText"
                                android:textSize="@dimen/text_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginEnd="@dimen/v_6dp"
                                android:gravity="center_vertical"
                                tools:text="Rosemary Edwards" />

                            <ImageView
                                android:id="@+id/userIcon"
                                android:layout_width="@dimen/v_16dp"
                                android:layout_height="@dimen/v_16dp"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:src="@drawable/ic_check_circle"
                                android:tint="@color/nice_blue"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/profile_textMarginTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/activeIcon"
                                android:layout_width="@dimen/v_6dp"
                                android:layout_height="@dimen/v_6dp"
                                android:src="@drawable/background_rounded_max"
                                android:tint="@color/status_green"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/activeLabel"
                                style="@style/Models13Text"
                                android:textSize="@dimen/text_13"
                                android:textColor="@color/text_gray"
                                android:layout_marginStart="@dimen/v_4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                tools:text="Active user" />
                        </LinearLayout>
                    </LinearLayout>

                    <!--      margin start = 64(final resized image size) + 16(image start margin) + 16(label start margin) = 96 dp -->
                    <LinearLayout
                        android:id="@+id/secondaryLabel"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/profile_secondaryContainerMargin"
                        android:layout_marginEnd="@dimen/profile_defaultPadding"
                        android:orientation="vertical"
                        android:gravity="center_vertical"
                        android:visibility="gone"
                        tools:visibility="gone"
                        app:layout_constraintTop_toTopOf="@+id/imageContainer"
                        app:layout_constraintBottom_toBottomOf="@+id/imageContainer"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/secondaryName"
                                style="@style/Models16SemiBoldText"
                                android:textSize="@dimen/text_16"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:layout_marginEnd="@dimen/v_6dp"
                                android:gravity="center_vertical"
                                tools:text="Rosemary Edwards" />

                            <ImageView
                                android:id="@+id/secondaryUserIcon"
                                android:layout_width="@dimen/v_16dp"
                                android:layout_height="@dimen/v_16dp"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:src="@drawable/ic_check_circle"
                                android:tint="@color/nice_blue"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="@dimen/profile_textMarginTop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/secondaryActiveIcon"
                                android:layout_width="@dimen/v_6dp"
                                android:layout_height="@dimen/v_6dp"
                                android:src="@drawable/background_rounded_max"
                                android:tint="@color/status_green"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:layout_gravity="center_vertical"/>

                            <TextView
                                android:id="@+id/secondaryActiveLabel"
                                style="@style/Models13Text"
                                android:textSize="@dimen/text_13"
                                android:textColor="@color/text_gray"
                                android:layout_marginStart="@dimen/v_4dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:ellipsize="end"
                                android:gravity="center_vertical"
                                tools:text="Active user" />
                        </LinearLayout>

                    </LinearLayout>

                        <com.square.android.utils.widget.PoppinsTabLayout
                            android:id="@+id/tabLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/v_8dp"
                            app:layout_constraintTop_toBottomOf="@+id/imageContainer"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:tabIndicator="@drawable/indicator"
                            android:visibility="gone"
                            tools:visibility="visible"
                            android:layout_marginStart="@dimen/v_24dp"
                            android:layout_marginEnd="@dimen/v_24dp"
                            app:tabTextAppearance="@style/TabText"
                            app:tabIndicatorColor="@color/placesPrimary"
                            app:tabSelectedTextColor="@android:color/black"
                            app:tabBackground="@android:color/transparent"
                            app:tabTextColor="@color/gray_disabled" />

                    <View
                        android:id="@+id/separator"
                        android:layout_width="0dp"
                        android:layout_height="1.5dp"
                        app:layout_goneMarginTop="@dimen/v_8dp"
                        android:background="@color/gray_light"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tabLayout" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/profileMainNested"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:layout_height="wrap_content" >

            <com.square.android.utils.widget.WrapContentPagingViewPager
                android:id="@+id/viewPager"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                android:clipToPadding="false"
                android:paddingTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>