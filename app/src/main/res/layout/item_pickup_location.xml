<?xml version="1.0" encoding="utf-8"?>
<com.square.android.utils.widget.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookingContainer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:gravity="center_vertical"
    android:background="@drawable/interval_background" >

    <ImageView
        android:id="@+id/imv1"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/r_pin"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="12dp" />

    <CheckedTextView
        android:id="@+id/address"
        style="@style/Models16BoldText"
        android:textColor="@color/interval_time_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="24dp"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_marginEnd="10dp"
        tools:text="Via Calle Pace 17, Milan" />

    <View
        android:id="@+id/separator"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/divider"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/imv2"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/r_sign"
        android:layout_marginEnd="6dp" />

</com.square.android.utils.widget.CheckableLinearLayout>