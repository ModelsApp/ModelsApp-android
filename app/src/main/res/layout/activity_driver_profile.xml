<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:clipChildren="false"
    android:clipToPadding="false"
    android:background="@android:color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/driverProfileTopContainer"
        android:layout_width="match_parent"
        android:paddingBottom="12dp"
        android:clipToPadding="false"
        android:background="@android:color/white"
        android:layout_height="wrap_content"
        android:elevation="1dp" >

        <ImageView
            android:id="@+id/driverProfileEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:src="@drawable/ic_edit"
            app:layout_constraintBottom_toBottomOf="@+id/driverProfileLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/driverProfileLabel" />

        <TextView
            android:id="@+id/driverProfileLabel"
            style="@style/Models20BoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/profile"
            app:layout_constraintEnd_toStartOf="@+id/driverProfileEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

<!--    TODO img rounded corners 16dp    -->
        <com.square.android.ui.view.CircleImageView
            android:id="@+id/driverProfileImage"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:adjustViewBounds="true"
            android:background="@drawable/circle_white"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            app:layout_constraintTop_toBottomOf="@+id/driverProfileLabel"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@drawable/referral_field_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/driverProfileImage"
            app:layout_constraintBottom_toBottomOf="@+id/driverProfileImage"
            app:layout_constraintStart_toEndOf="@+id/driverProfileImage"
            app:layout_constraintEnd_toEndOf="parent" >

            <TextView
                android:id="@+id/driverProfileDriverName"
                style="@style/Models18BoldText"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:includeFontPadding="false"
                tools:text="Matt C." />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:orientation="horizontal" >

                <RatingBar
                    android:id="@+id/driverProfileRatingBar"
                    style="@style/RatingBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:rating="3.8" />

                <TextView
                    android:id="@+id/driverProfileRatingValue"
                    style="@style/Models15BoldText"
                    android:layout_marginStart="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:includeFontPadding="false"
                    tools:text="3.5" />

            </LinearLayout>

            <TextView
                android:id="@+id/driverProfileCarName"
                android:textColor="@color/gray_hint_light"
                style="@style/Models16Text"
                android:layout_marginTop="5dp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Honda Civic" />

            <TextView
                android:id="@+id/driverProfileCarPlate"
                style="@style/Models16Text"
                android:textColor="@color/gray_hint_light"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="HF 321 EX" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/Models16Text"
                    android:includeFontPadding="false"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/color" />

                <TextView
                    android:id="@+id/driverProfileCarColor"
                    style="@style/Models16Text"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:includeFontPadding="false"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/gray_hint_light"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Black" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginStart="115dp"
            android:layout_marginTop="115dp"
            android:background="@drawable/status_circle"
            android:backgroundTint="@color/status_green"
            app:layout_constraintStart_toStartOf="@+id/driverProfileImage"
            app:layout_constraintTop_toTopOf="@+id/driverProfileImage" />

    </androidx.constraintlayout.widget.ConstraintLayout>

  <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:requiresFadingEdge="vertical"
        android:scrollbars="none"
        android:clipChildren="false"
        android:overScrollMode="never" >

    <LinearLayout
        android:id="@+id/driverProfileForm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:background="@android:color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="vertical" >

        <com.square.android.utils.widget.ErrorEditText
            android:id="@+id/formDProfileName"
            style="@style/NewInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_name"
            android:inputType="textPersonName|textCapSentences" />

        <com.square.android.utils.widget.ErrorEditText
            android:id="@+id/formDProfileLastName"
            style="@style/NewInputField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/hint_last_name"
            android:inputType="textPersonName|textCapSentences" />

        <TextView
            android:id="@+id/formDProfileNationality"
            style="@style/NewInputSpinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/nationality_pure" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/formDProfileBirth"
                style="@style/NewInputSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                tools:text="18.09.2019"
                android:hint="@string/hint_birth"
                android:layout_marginEnd="8dp" />

            <TextView
                android:id="@+id/formDProfileGender"
                style="@style/NewInputSpinner"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:hint="@string/hint_gender" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/formDProfileDialCodeLl"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_width="128dp"
                android:background="@drawable/background_rounded_4dp"
                android:elevation="1dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/formDProfileFlag"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center"
                        android:layout_marginStart="16dp"
                        tools:src="@drawable/flag_ac" />

                    <TextView
                        android:id="@+id/formDProfileCode"
                        style="@style/Models14Text"
                        android:gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="+1"
                        android:drawableEnd="@drawable/ic_arrow_down" />
                </LinearLayout>

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/formDProfilePhone"
                style="@style/NewInputField"
                android:layout_width="match_parent"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:hint="@string/phone"
                android:inputType="textPersonName|textCapSentences" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" >

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/formDProfileLicense"
                style="@style/NewInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="8dp"
                android:hint="@string/license_no"
                android:inputType="textPersonName|textCapSentences" />

            <TextView
                android:id="@+id/formDProfileExpiration"
                style="@style/NewInputSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"
                android:hint="@string/expiration_date" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/formDProfileBrand"
                style="@style/NewInputSpinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="8dp"
                android:hint="@string/car_brand" />

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/formDProfileModel"
                style="@style/NewInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"
                android:hint="@string/car_model"
                android:inputType="textPersonName|textCapSentences" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:orientation="horizontal" >

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/formDProfileColor"
                style="@style/NewInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginEnd="8dp"
                android:hint="@string/car_color"
                android:inputType="textPersonName|textCapSentences" />

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/formDProfilePlate"
                style="@style/NewInputField"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:layout_marginStart="8dp"
                android:hint="@string/car_plate"
                android:inputType="textPersonName|textCapSentences" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/driverProfileLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:tint="@color/nice_pink"
                android:src="@drawable/r_hanger" />

            <TextView
                style="@style/Models16BoldText"
                android:textColor="@color/nice_pink"
                android:layout_marginStart="8dp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_out" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/driverProfileTerms"
                style="@style/Models16BoldText"
                android:layout_marginEnd="8dp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/terms_" />

            <View
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:backgroundTint="@color/gray_btn_disabled"
                android:background="@drawable/status_circle" />

            <TextView
                android:id="@+id/driverProfilePrivacy"
                style="@style/Models16BoldText"
                android:layout_marginStart="8dp"
                android:includeFontPadding="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/privacy" />
        </LinearLayout>

    </LinearLayout>

  </ScrollView>


<!--  TODO: check on device  -->

</LinearLayout>


