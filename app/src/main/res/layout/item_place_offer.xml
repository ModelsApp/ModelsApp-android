<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:background="@android:color/white"
    android:paddingTop="@dimen/ac_place_default_margin"
    android:paddingBottom="@dimen/v_8dp"
    android:paddingStart="@dimen/ac_place_default_margin"
    android:paddingEnd="@dimen/ac_place_default_margin"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:id="@+id/topLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imv"
            android:layout_width="@dimen/v_64dp"
            android:layout_height="@dimen/v_64dp"
            android:adjustViewBounds="true"
            tools:src="@color/divider"
            tools:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/v_16dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            app:layout_constraintStart_toEndOf="@+id/imv"
            app:layout_constraintEnd_toStartOf="@+id/itemIc"
            app:layout_constraintTop_toTopOf="@+id/imv"
            app:layout_constraintBottom_toBottomOf="@+id/imv" >

            <TextView
                style="@style/Models16SemiBoldText"
                android:textSize="@dimen/text_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Breakfast" />

            <TextView
                style="@style/Models14SemiBoldText"
                android:textSize="@dimen/text_14"
                android:layout_marginTop="@dimen/v_6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Discount: 20%" />

        </LinearLayout>

        <ImageView
            android:id="@+id/itemIc"
            android:layout_width="@dimen/v_28dp"
            android:layout_height="@dimen/v_28dp"
            android:src="@drawable/radio_btn_unchecked"
            app:layout_constraintTop_toTopOf="@+id/imv"
            app:layout_constraintBottom_toBottomOf="@+id/imv"
            app:layout_constraintEnd_toEndOf="parent" />

    </LinearLayout>

<!--  Visible when bottomLl is gone and gone otherwise(offer selected)  -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_12dp"
        android:visibility="visible"/>


    <LinearLayout
        android:id="@+id/bottomLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v_24dp"
        android:orientation="vertical"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@+id/paddingView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <TextView
            android:id="@+id/tvTop"
            style="@style/Models14SemiBoldText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_14"
            android:textColor="@color/text_gray"
            tools:text="Text text text" />

        <TextView
            android:id="@+id/tvNotes"
            style="@style/Models15SemiBoldText"
            android:textSize="@dimen/text_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/v_1dp"
            android:layout_marginTop="@dimen/v_20dp"
            tools:text="Notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes notes"
            android:textColor="@color/text_gray" />

        <TextView
            android:id="@+id/tvTerms"
            style="@style/Models15SemiBoldText"
            android:textSize="@dimen/text_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="@dimen/v_1dp"
            android:layout_marginTop="@dimen/v_20dp"
            tools:text="Terms terms terms terms terms terms terms terms terms terms terms terms terms"
            android:textColor="@color/text_gray" />

        <!--  TODO grid  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/requirementsRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_16dp"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:background="@color/gray_hint"
            tools:layout_height="@dimen/v_50dp" />

        <TextView
            android:id="@+id/timeframesLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_20dp"
            android:text="@string/select_timeframes" />

        <ProgressBar
            android:id="@+id/placeProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_20dp"
            android:indeterminateTint="@color/nice_red"
            android:visibility="gone" />

<!--    Horizontal  orientation   -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/intervalsRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:visibility="visible"
            android:nestedScrollingEnabled="false"
            tools:background="@color/gray_hint"
            tools:layout_height="@dimen/v_50dp" />

        <TextView
            android:id="@+id/intervalsEmpty"
            style="@style/Models18Text"
            android:layout_width="0dp"
            android:layout_height="@dimen/v_80dp"
            android:layout_marginTop="@dimen/v_16dp"
            android:background="@drawable/referral_field_background"
            android:backgroundTint="@color/gray_light"
            android:gravity="center"
            android:text="@string/cant_use_square"
            android:textColor="@color/blueish_gray"
            android:visibility="gone"
            tools:visibility="gone" />

    </LinearLayout>

</LinearLayout>