<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@android:color/white"
    tools:context=".ui.fragment.auth.AuthFragment" >

    <ImageView
        android:id="@+id/arrowBack"
        android:layout_width="@dimen/v_40dp"
        android:layout_height="@dimen/v_40dp"
        android:layout_marginStart="@dimen/v_12dp"
        android:layout_marginTop="@dimen/v_12dp"
        android:src="@drawable/chevron_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/resetTv"
        style="@style/Models26SemiBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/reset_password"
        android:textSize="@dimen/text_26"
        android:layout_marginStart="@dimen/v_24dp"
        android:layout_marginTop="@dimen/v_12dp"
        app:layout_constraintTop_toBottomOf="@+id/arrowBack"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        style="@style/Models16SemiBoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v_12dp"
        android:lineSpacingExtra="@dimen/v_2dp"
        android:text="@string/reset_check_inbox"
        android:textColor="@color/text_gray"
        android:textSize="@dimen/text_16"
        app:layout_constraintStart_toStartOf="@+id/resetTv"
        app:layout_constraintTop_toBottomOf="@+id/resetTv" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="@dimen/v_24dp"
        app:layout_constraintVertical_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintBottom_toBottomOf="parent" >

        <!--  redesigned default edit text     -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_rv_height" >
          <com.square.android.utils.widget.ErrorEditText
            style="@style/RedesignedInputField"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

            <TextView
                style="@style/RedesignedFieldHeader"
                android:text="@string/email_label" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnReset"
            style="@style/Models16Text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_btn_height"
            android:layout_marginTop="@dimen/v_24dp"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:background="@drawable/background_rounded_12dp"
            android:backgroundTint="@android:color/black"
            android:text="@string/reset"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>