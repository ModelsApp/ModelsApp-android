<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <View
        android:id="@+id/v1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subitem_top_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/preferenceSwitch"
        style="@style/Models15Text"
        android:textSize="@dimen/subitem_text_size_normal"
        android:textColor="@color/grey_dark"
        android:layout_width="match_parent"
        android:layout_height="@dimen/subitem_preference_switch_size"
        android:enabled="false"
        android:layout_marginStart="@dimen/subitem_left_margin"
        app:thumbTint="@color/switch_color_thumb"
        app:trackTint="@color/switch_color_track"
        app:layout_constraintTop_toBottomOf="@+id/v1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_vertical"
        tools:text="Social contents" />

    <View
        android:id="@+id/preferenceClickView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@+id/preferenceSwitch"
        app:layout_constraintBottom_toBottomOf="@+id/preferenceSwitch"
        app:layout_constraintStart_toStartOf="@+id/preferenceSwitch"
        app:layout_constraintEnd_toEndOf="@+id/preferenceSwitch" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/subitem_preference_bottom_margin"
        app:layout_constraintTop_toBottomOf="@+id/preferenceSwitch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>