<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bookingContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="8dp"
    android:paddingEnd="8dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/interval_background" >

    <TextView
        android:id="@+id/bookingInterval"
        style="@style/Models16BoldText"
        android:textColor="@color/interval_time_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="10:00 - 13:00" />

    <TextView
        android:id="@+id/bookingSpots"
        style="@style/Models16Text"
        android:textColor="@color/interval_spots_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        tools:text="2 Spots" />
</LinearLayout>