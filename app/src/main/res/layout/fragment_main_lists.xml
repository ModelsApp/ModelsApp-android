<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true"
    tools:context=".ui.fragment.mainLists.MainListsFragment" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:paddingBottom="@dimen/v_12dp"
        android:layout_height="wrap_content"
        android:background="@color/greyish_app_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:id="@+id/mainListsCitiesLl"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/v_30dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginTop="@dimen/v_44dp"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/mainListsCity"
                style="@style/Models22SemiBoldText"
                android:textSize="@dimen/text_22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                tools:text="Milan" />

            <ImageView
                android:layout_width="@dimen/v_20dp"
                android:layout_height="@dimen/v_20dp"
                android:src="@drawable/ic_arrow_down"
                android:tint="@android:color/black"
                android:layout_marginStart="@dimen/v_4dp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/icSearch"
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_16dp"
            android:src="@drawable/ic_search"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:layout_constraintBottom_toBottomOf="@+id/icFilters"
            app:layout_constraintEnd_toStartOf="@+id/icFilters"
            app:layout_constraintTop_toTopOf="@+id/icFilters" />

        <ImageView
            android:id="@+id/icFilters"
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            android:layout_marginTop="@dimen/v_48dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/r_settings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.square.android.utils.widget.PoppinsTabLayout
            android:id="@+id/mainListsTabs"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/v_42dp"
            android:layout_marginStart="@dimen/v_12dp"
            app:layout_goneMarginTop="@dimen/v_40dp"
            android:layout_marginTop="@dimen/v_8dp"
            app:layout_constrainedWidth="true"
            app:layout_constraintEnd_toStartOf="@+id/icSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainListsCitiesLl"
            app:tabBackground="@android:color/transparent"
            app:tabSelectedTextColor="@android:color/black"
            app:tabRippleColor="@android:color/transparent"
            app:tabTextAppearance="@style/TabTextBigger"
            app:tabIndicator="@drawable/tab_indicator_1dp"
            app:tabIndicatorColor="@android:color/black"
            app:tabPaddingStart="@dimen/v_12dp"
            app:tabPaddingEnd="@dimen/v_12dp"
            app:tabMode="scrollable"
            app:tabMinWidth="0dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:tabTextColor="@color/gray_disabled" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/mainListsFiltersDaysRv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_16dp"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@+id/mainListsTabs"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:itemCount="1"
            tools:listitem="@layout/item_day_adjustable" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/v_1dp"
        android:background="@color/gray_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topContainer" />

    <ProgressBar
        android:id="@+id/mainListsProgress"
        android:layout_width="@dimen/v_48dp"
        android:layout_height="@dimen/v_48dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/placesPrimary"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <com.square.android.utils.widget.PagingViewPager
        android:id="@+id/mainListsPager"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>