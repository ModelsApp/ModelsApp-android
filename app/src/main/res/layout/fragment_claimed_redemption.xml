<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView
        android:id="@+id/claimedRedemptionTitle"
        style="@style/Models20SemiBoldText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:includeFontPadding="false"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="La Perla d'Oro"
        android:textColor="@android:color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/claimedRedemptionTab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/claimedRedemptionTitle"
        app:tabIndicator="@drawable/indicator"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="38dp"
        app:tabIndicatorColor="@color/placesPrimary"
        app:tabSelectedTextColor="@color/placesPrimary"
        app:tabTextColor="@color/secondary_text"  />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/claimedRedemptionPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/claimedRedemptionTab" />

    <ProgressBar
        android:id="@+id/claimedRedemptionProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:indeterminateTint="@color/placesPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/claimedRedemptionPager"
        app:layout_constraintEnd_toEndOf="@+id/claimedRedemptionPager"
        app:layout_constraintStart_toStartOf="@+id/claimedRedemptionPager"
        app:layout_constraintTop_toTopOf="@+id/claimedRedemptionPager" />

</androidx.constraintlayout.widget.ConstraintLayout>