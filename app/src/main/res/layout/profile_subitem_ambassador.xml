<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_marginStart="28dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ambassadorIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            tools:src="@drawable/r_shop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="28dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ambassadorTitle"
                style="@style/Models15SemiBoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Join our team" />

            <ImageView
                android:id="@+id/ambassadorSmallIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="6dp"
                android:src="@drawable/r_shop" />

        </LinearLayout>

        <TextView
            android:id="@+id/ambassadorBtn"
            style="@style/Models16SemiBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/apply"
            android:textColor="@color/nice_pink" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginStart="28dp" />

</LinearLayout>