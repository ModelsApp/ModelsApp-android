<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/white" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topContainer"
        android:layout_width="0dp"
        android:paddingTop="@dimen/v_40dp"
        android:paddingBottom="@dimen/v_4dp"
        android:layout_height="wrap_content"
        android:background="@color/greyish_app_bg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <ImageView
            android:id="@+id/arrowBack"
            android:layout_width="@dimen/v_40dp"
            android:layout_height="@dimen/v_40dp"
            android:src="@drawable/chevron_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/text_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/requirements"
            app:layout_constraintTop_toTopOf="@+id/arrowBack"
            app:layout_constraintBottom_toBottomOf="@id/arrowBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/black" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/v_1dp"
        android:background="@color/gray_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topContainer" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/white"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintBottom_toBottomOf="parent" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:background="@android:color/white"
            android:paddingBottom="@dimen/v_24dp"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:id="@+id/requirementsLabel"
                android:layout_width="@dimen/v_50dp"
                android:layout_height="@dimen/v_50dp"
                android:background="@drawable/bg_round_stroke"
                android:layout_marginTop="@dimen/v_24dp"
                android:layout_gravity="center_horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/v_24dp"
                    android:layout_height="@dimen/v_24dp"
                    android:src="@drawable/ic_info" />
            </RelativeLayout>

            <TextView
                android:id="@+id/titleTv"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_marginTop="@dimen/v_16dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:layout_marginEnd="@dimen/v_24dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/requirementsLabel"
                android:text="@string/requirements"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/requirementsText"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:textColor="@color/text_gray"
                android:lineSpacingExtra="@dimen/v_2dp"
                android:layout_marginTop="@dimen/v_8dp"
                android:layout_marginStart="@dimen/v_32dp"
                android:layout_marginEnd="@dimen/v_32dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTv"
                android:text="@string/requirements_text"
                android:gravity="center_horizontal" />

            <View
                android:id="@+id/dividerWide"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_24dp"
                app:layout_constraintTop_toBottomOf="@+id/requirementsText"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_divider" />

            <LinearLayout
                android:id="@+id/llInstaRequirements"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:layout_marginEnd="@dimen/v_24dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/dividerWide"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <TextView
                    style="@style/Models18SemiBoldText"
                    android:textSize="@dimen/text_18"
                    android:lineSpacingExtra="@dimen/v_2dp"
                    android:layout_marginTop="@dimen/v_8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/instagram_requirements"
                    android:gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_20dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/organic_followers" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/published_posts" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="50+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/posts_per_week" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/posts_owned_by_you" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/all" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/account_availability" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/s_public" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/account_type" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ac_type_text" />
                </LinearLayout>
                
            </LinearLayout>

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_24dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:layout_marginEnd="@dimen/v_24dp"
                app:layout_constraintTop_toBottomOf="@+id/llInstaRequirements"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@color/gray_divider" />

            <LinearLayout
                android:id="@+id/llYoutubeRequirements"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:layout_marginEnd="@dimen/v_24dp"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        style="@style/Models18SemiBoldText"
                        android:textSize="@dimen/text_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/youtube_requirements"
                        android:gravity="center_horizontal" />

                    <TextView
                        style="@style/Models18SemiBoldText"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/v_4dp"
                        android:textColor="@color/text_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/optional"
                        android:gravity="center_horizontal" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_20dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/subscribers" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/views_after_30_days" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1,000+" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp" >
                    <ImageView
                        android:layout_width="@dimen/v_24dp"
                        android:layout_height="@dimen/v_24dp"
                        android:src="@drawable/r_address" />
                    <TextView
                        style="@style/Models15SemiBoldText"
                        android:textSize="@dimen/text_15"
                        android:textColor="@color/text_gray"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/account_activity" />
                    <TextView
                        style="@style/Models15Text"
                        android:textSize="@dimen/text_15"
                        android:layout_marginStart="@dimen/v_16dp"
                        android:maxLines="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/active_and_growing" />
                </LinearLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
