<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:background="@android:color/white" >

        <TextView
            style="@style/Models22Text"
            android:layout_marginTop="32dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/select_a_city"
            android:gravity="center_horizontal" />

        <com.square.android.utils.widget.RecyclerViewMaxHeight
            android:id="@+id/selectCityRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:recycler_max_height="256dp"
            android:layout_marginTop="24dp"
            android:clipToPadding="false"
            android:paddingStart="16dp"
            android:requiresFadingEdge="vertical"
            android:background="@android:color/white"
            android:paddingEnd="16dp"
            android:orientation="vertical"
            android:overScrollMode="never"
            tools:listitem="@layout/item_select_city"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/campaignsTitle" />

    </LinearLayout>

</androidx.cardview.widget.CardView>