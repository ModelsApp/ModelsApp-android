<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_rounded_top_16dp" >

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/v_48dp"
        android:layout_height="@dimen/v_6dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/background_rounded_max"
        android:backgroundTint="@color/gray_btn_disabled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/eventNested"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/v_24dp"
        android:clipToPadding="false"
        android:requiresFadingEdge="vertical"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintBottom_toTopOf="@+id/divider8"
        android:background="@android:color/white"
        android:overScrollMode="never"
        android:scrollbars="none" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="@dimen/v_16dp"
            android:paddingTop="@dimen/v_8dp"
            android:background="@android:color/white"
            android:layout_height="wrap_content" >

            <TextView
                tools:visibility="gone"
                android:id="@+id/categoryLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_8dp"
                android:text="@string/category"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                tools:visibility="gone"
                style="@style/Models15Text"
                android:textSize="@dimen/text_15"
                android:textColor="@color/text_gray_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginEnd="@dimen/v_8dp"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Category 1, Category 2, Category 3, Category 4"
                app:layout_constraintBottom_toBottomOf="@+id/categoryLabel"
                app:layout_constraintTop_toTopOf="@+id/categoryLabel"
                app:layout_constraintStart_toEndOf="@+id/categoryLabel"
                app:layout_constraintEnd_toStartOf="@+id/categoryIc" />

            <ImageView
                tools:visibility="gone"
                android:id="@+id/categoryIc"
                android:layout_width="@dimen/v_24dp"
                android:layout_height="@dimen/v_24dp"
                android:src="@drawable/ic_edit"
                android:padding="@dimen/v_5dp"
                android:layout_marginEnd="@dimen/v_20dp"
                android:background="@drawable/background_rounded_max"
                android:backgroundTint="@color/gray_btn_disabled"
                app:layout_constraintBottom_toBottomOf="@+id/categoryLabel"
                app:layout_constraintTop_toTopOf="@+id/categoryLabel"
                app:layout_constraintEnd_toEndOf="parent" />

            <View
                tools:visibility="gone"
                android:id="@+id/divider"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:background="@color/gray_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/categoryLabel" />

            <TextView
                tools:visibility="gone"
                android:id="@+id/availabilityLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:text="@string/availability"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <androidx.recyclerview.widget.RecyclerView
                tools:visibility="gone"
                android:id="@+id/availabilityRv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/availabilityLabel"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_availability"
                tools:itemCount="1" />

            <View
                tools:visibility="gone"
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:background="@color/gray_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/availabilityRv" />

            <TextView
                tools:visibility="gone"
                android:id="@+id/showMePlacesLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:text="@string/show_me_places"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2" />

            <androidx.recyclerview.widget.RecyclerView
                tools:visibility="gone"
                android:id="@+id/showMePlacesRv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/showMePlacesLabel"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rounded_checkable"
                tools:itemCount="1" />

            <View
                tools:visibility="gone"
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:background="@color/gray_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/showMePlacesRv" />

            <TextView
                tools:visibility="gone"
                android:id="@+id/offersTypologyLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:text="@string/offers_typology"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider3" />

            <androidx.recyclerview.widget.RecyclerView
                tools:visibility="gone"
                android:id="@+id/offersTypologyRv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offersTypologyLabel"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rounded_checkable"
                tools:itemCount="1" />

            <View
                tools:visibility="gone"
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:background="@color/gray_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offersTypologyRv" />

            <TextView
                tools:visibility="gone"
                android:id="@+id/offersLevelLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:text="@string/offers_level"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4" />

            <androidx.recyclerview.widget.RecyclerView
                tools:visibility="gone"
                android:id="@+id/offersLevelRv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offersLevelLabel"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rounded_checkable"
                tools:itemCount="1" />

            <View
                tools:visibility="gone"
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:background="@color/gray_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/offersLevelRv" />

            <TextView
                tools:visibility="gone"
                android:id="@+id/bookingTypeLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:text="@string/booking_type"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider5" />

            <androidx.recyclerview.widget.RecyclerView
                tools:visibility="gone"
                android:id="@+id/bookingTypeRv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingTypeLabel"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rounded_checkable"
                tools:itemCount="1" />

            <View
                android:id="@+id/divider6"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:background="@color/gray_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bookingTypeRv" />

            <TextView
                android:id="@+id/takeawayOptionLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:text="@string/takeaway_option"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider6" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/takeawayOptionRv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/takeawayOptionLabel"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rounded_checkable"
                tools:itemCount="1" />

            <View
                android:id="@+id/divider7"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_1dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:layout_marginStart="@dimen/v_24dp"
                android:background="@color/gray_divider"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/takeawayOptionRv" />

            <TextView
                android:id="@+id/reservationTimeslotLabel"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/text_15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_20dp"
                android:text="@string/reservation_timeslot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider7" />

            <!--  TODO different library? low resolution thumb drawable  -->
            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/reservationTimeslotSeekBar"
                android:layout_width="0dp"
                android:layout_height="@dimen/v_24dp"
                android:layout_marginTop="@dimen/v_24dp"
                android:layout_marginStart="@dimen/v_16dp"
                android:layout_marginEnd="@dimen/v_16dp"
                app:rsb_mode="range"
                app:rsb_indicator_show_mode="alwaysHide"
                app:rsb_min_interval="1"
                app:rsb_min="0"
                app:rsb_max="24"
                app:rsb_steps="24"
                app:rsb_step_auto_bonding="true"
                app:rsb_step_width="@dimen/v_6dp"
                app:rsb_step_height="@dimen/v_6dp"
                app:rsb_step_color="@android:color/transparent"
                app:rsb_thumb_drawable="@drawable/seekbar_thumb_drawable"
                app:rsb_thumb_height="@dimen/v_24dp"
                app:rsb_thumb_width="@dimen/v_24dp"
                app:rsb_progress_color="@android:color/black"
                app:rsb_progress_default_color="@color/gray_divider"
                app:rsb_progress_height="@dimen/v_2dp"
                app:layout_constraintTop_toBottomOf="@+id/reservationTimeslotLabel"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/reservationStart"
                style="@style/Models14Text"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_6dp"
                tools:text="00:00"
                app:layout_constraintTop_toBottomOf="@+id/reservationTimeslotSeekBar"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/reservationEnd"
                style="@style/Models14Text"
                android:textSize="@dimen/text_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_6dp"
                tools:text="01:00"
                app:layout_constraintTop_toBottomOf="@+id/reservationTimeslotSeekBar"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <View
        android:id="@+id/divider8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_1dp"
        android:layout_marginBottom="@dimen/v_48dp"
        android:background="@color/gray_divider"
        app:layout_constraintBottom_toTopOf="@+id/btnApply"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnApply"
        style="@style/Models16Text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/auth_btn_height"
        android:layout_marginStart="@dimen/v_20dp"
        android:layout_marginEnd="@dimen/v_20dp"
        android:layout_marginBottom="@dimen/v_8dp"
        android:background="@drawable/button_black_alpha"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:text="@string/apply"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_16"
        app:layout_constraintBottom_toTopOf="@+id/clearLl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/clearLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/v_12dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="@dimen/v_8dp"
        android:paddingTop="@dimen/v_8dp"
        android:paddingEnd="@dimen/v_8dp"
        android:paddingBottom="@dimen/v_8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnApply"
        app:layout_constraintStart_toStartOf="@+id/btnApply">

        <ImageView
            android:layout_width="@dimen/v_14dp"
            android:layout_height="@dimen/v_14dp"
            android:src="@drawable/close_x"
            android:tint="@color/gray_back_arrow" />

        <TextView
            style="@style/Models13Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/v_4dp"
            android:text="@string/clear"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_13" />
    </LinearLayout>

</LinearLayout>


