<?xml version="1.0" encoding="utf-8"?>


<!-- TODO change alpha of image and 2 tv's if offer not available -->

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemOfferContainer"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/itemOfferImv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        app:layout_constraintDimensionRatio="1:1"
        tools:src="@drawable/auth_background"
        tools:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    
    <TextView
        android:id="@+id/itemOfferName"
        style="@style/Models16BoldText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        tools:text="Top breakfast"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/itemOfferImv"
        app:layout_constraintStart_toStartOf="@id/itemOfferImv"
        app:layout_constraintEnd_toEndOf="@id/itemOfferImv" />

    <TextView
        android:id="@+id/itemOfferCredits"
        style="@style/Models16Text"
        android:textColor="@color/nice_pink"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginTop="4dp"
        tools:text="20 credits"
        app:layout_constraintTop_toBottomOf="@id/itemOfferName"
        app:layout_constraintStart_toStartOf="@id/itemOfferImv"
        app:layout_constraintEnd_toEndOf="@id/itemOfferImv" />

</androidx.constraintlayout.widget.ConstraintLayout>