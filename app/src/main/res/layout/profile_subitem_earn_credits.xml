<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="28dp" >

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        tools:src="@drawable/r_shop" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="28dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/earnTitle"
            style="@style/Models15SemiBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            tools:text="Share with friends" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/earnCreditsValue"
                style="@style/Models15SemiBoldText"
                android:textColor="@color/nice_pink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="150" />

            <TextView
                android:id="@+id/text1"
                style="@style/Models15Text"
                android:textColor="@color/gray_hint"
                android:layout_marginStart="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/credits_lowercase" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/earnBtn"
        style="@style/Models16SemiBoldText"
        android:textColor="@color/nice_pink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Share" />

</LinearLayout>