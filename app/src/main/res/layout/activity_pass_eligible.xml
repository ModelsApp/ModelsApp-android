<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/greyish_app_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--  TODO: add square logo vector  -->
    <ImageView
        android:id="@+id/passLogo"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_launcher_icon" />

    <TextView
        android:id="@+id/passCardTitle"
        style="@style/Models20BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/good_news"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/passLogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/passCardLabelOne"
        style="@style/Models20Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/you_are_eligible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passCardTitle" />

    <TextView
        android:id="@+id/passCardLabelTwo"
        style="@style/Models20BoldText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:text="@string/square_pass_program"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passCardLabelOne" />

    <androidx.cardview.widget.CardView
        android:id="@+id/passCardView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="false"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passCardLabelTwo" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:padding="24dp" >

            <LinearLayout
                android:id="@+id/passBtnsRl"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:background="@drawable/bg_rounded_max_gray_stroke_trans"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <TextView
                    android:id="@+id/passBtnWeekly"
                    style="@style/Models18BoldText"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="2.5dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="2.5dp"
                    android:background="@drawable/background_rounded_max"
                    android:backgroundTint="@android:color/white"
                    android:textColor="@color/gray_disabled"
                    android:text="@string/weekly" />

                <TextView
                    android:id="@+id/passBtnMonthly"
                    style="@style/Models18BoldText"
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="2.5dp"
                    android:layout_marginTop="2.5dp"
                    android:layout_marginBottom="2.5dp"
                    android:background="@drawable/background_rounded_max"
                    android:backgroundTint="@color/gray_btn_disabled"
                    android:text="@string/monthly"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/passCardLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passBtnsRl" >
                <TextView
                    android:id="@+id/passCardPrice"
                    style="@style/Models38BoldText"
                    android:textColor="@color/nice_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="â‚¬14.99" />
                <TextView
                    android:id="@+id/passCardTime"
                    style="@style/Models20Text"
                    android:layout_marginStart="8dp"
                    android:textColor="@color/nice_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/slash_month" />
            </LinearLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_divider"
                app:layout_constraintTop_toBottomOf="@+id/passCardLl"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/passCardCheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/checkmark"
                app:layout_constraintStart_toStartOf="@+id/divider1"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <TextView
                android:id="@+id/passCardText1"
                style="@style/Models15Text"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:text="@string/pass_features_one"
                app:layout_constraintEnd_toEndOf="@+id/divider1"
                app:layout_constraintStart_toEndOf="@+id/passCardCheck1"
                app:layout_constraintTop_toTopOf="@+id/passCardCheck1" />

            <ImageView
                android:id="@+id/passCardCheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:src="@drawable/checkmark"
                app:layout_constraintStart_toStartOf="@+id/divider1"
                app:layout_constraintTop_toBottomOf="@+id/passCardText1" />

            <TextView
                android:id="@+id/passCardText2"
                style="@style/Models15Text"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="16dp"
                android:layout_height="wrap_content"
                android:text="@string/pass_features_two"
                app:layout_constraintEnd_toEndOf="@+id/divider1"
                app:layout_constraintStart_toEndOf="@+id/passCardCheck2"
                app:layout_constraintTop_toTopOf="@+id/passCardCheck2" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passCardText2" />

            <LinearLayout
                android:id="@+id/passPayBtn"
                android:layout_width="172dp"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:elevation="1dp"
                android:visibility="gone"
                tools:visibility="visible"
                android:stateListAnimator="@animator/image_button_anim"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:background="@drawable/referral_field_background"
                android:backgroundTint="@color/nice_pink" >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/logo_google"
                    android:background="@drawable/circle_white" />
                <TextView
                    style="@style/Models16BoldText"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/passProgress"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:indeterminate="true"
                android:visibility="visible"
                tools:visibility="gone"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/passMainProgress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="visible"
        tools:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passCardLabelTwo"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>