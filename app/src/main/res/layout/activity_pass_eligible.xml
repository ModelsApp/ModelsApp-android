<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!--  TODO: add square logo vector  -->
    <ImageView
        android:id="@+id/passLogo"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/auth_background" />

    <TextView
        android:id="@+id/passLabel"
        style="@style/Models20BoldText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_horizontal"
        android:text="@string/you_have_x_followers"
        android:textColor="@color/nice_pink"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passLogo" />

    <androidx.cardview.widget.CardView
        android:id="@+id/passCardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="32dp"
        android:animateLayoutChanges="true"
        android:background="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="1dp"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/passLabel">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="24dp" >

            <TextView
                android:id="@+id/passCardTitle"
                style="@style/Models20BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/good_news"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/passCardLabelOne"
                style="@style/Models20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/you_are_eligible"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passCardTitle" />

            <TextView
                android:id="@+id/passCardLabelTwo"
                style="@style/Models20BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="@string/square_pass_program"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passCardLabelOne" />

            <LinearLayout
                android:id="@+id/passCardLl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passCardLabelTwo" >
                <TextView
                    android:id="@+id/passCardPrice"
                    style="@style/Models40BoldText"
                    android:textColor="@color/nice_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/square_pass_price" />
                <TextView
                    android:id="@+id/passCardTime"
                    style="@style/Models20Text"
                    android:layout_marginStart="12dp"
                    android:textColor="@color/nice_pink"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/slash_week" />
            </LinearLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_divider"
                app:layout_constraintTop_toBottomOf="@+id/passCardLl"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <ImageView
                android:id="@+id/passCardCheck1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/checkmark"
                app:layout_constraintStart_toStartOf="@+id/divider1"
                app:layout_constraintTop_toBottomOf="@+id/divider1" />

            <TextView
                android:id="@+id/passCardText1"
                style="@style/Models16Text"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/pass_features_one"
                app:layout_constraintEnd_toEndOf="@+id/divider1"
                app:layout_constraintStart_toEndOf="@+id/passCardCheck1"
                app:layout_constraintTop_toTopOf="@+id/passCardCheck1" />

            <ImageView
                android:id="@+id/passCardCheck2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="32dp"
                android:src="@drawable/checkmark"
                app:layout_constraintStart_toStartOf="@+id/divider1"
                app:layout_constraintTop_toBottomOf="@+id/passCardText1" />

            <TextView
                android:id="@+id/passCardText2"
                style="@style/Models16Text"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/pass_features_two"
                app:layout_constraintEnd_toEndOf="@+id/divider1"
                app:layout_constraintStart_toEndOf="@+id/passCardCheck2"
                app:layout_constraintTop_toTopOf="@+id/passCardCheck2" />

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginTop="28dp"
                android:layout_marginEnd="16dp"
                android:background="@color/gray_divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/passCardText2" />

            <LinearLayout
                android:id="@+id/passPayBtn"
                android:layout_width="172dp"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:elevation="1dp"
                android:stateListAnimator="@animator/image_button_anim"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintVertical_bias="1.0"
                android:layout_marginTop="32dp"
                android:gravity="center"
                android:background="@drawable/referral_field_background"
                android:backgroundTint="@color/nice_pink" >
                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="4dp"
                    android:src="@drawable/logo_google"
                    android:background="@drawable/circle_white" />
                <TextView
                    style="@style/Models16BoldText"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/passProgress"
                android:layout_width="wrap_content"
                android:layout_height="42dp"
                android:indeterminate="true"
                android:visibility="gone"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="1.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>