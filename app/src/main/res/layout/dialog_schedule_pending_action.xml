<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    app:cardCornerRadius="@dimen/v_12dp"
    app:cardElevation="0dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingTop="@dimen/v_20dp"
        android:paddingBottom="@dimen/v_24dp" >

        <ImageView
            android:id="@+id/icClose"
            android:layout_width="@dimen/v_32dp"
            android:layout_height="@dimen/v_32dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:padding="@dimen/v_2dp"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/close_x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/v_50dp"
            android:layout_height="@dimen/v_50dp"
            android:layout_marginTop="@dimen/v_8dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icClose"
            tools:srcCompat="@tools:sample/backgrounds/scenic[6]" />

        <TextView
            android:id="@+id/title"
            style="@style/Models16SemiBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_20dp"
            android:layout_marginStart="@dimen/v_20dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:gravity="center"
            android:textSize="@dimen/text_16"
            app:layout_constraintTop_toBottomOf="@+id/image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="La Perla d'Oro" />

        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/v_20dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:layout_marginTop="@dimen/v_12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/title"
            app:layout_goneMarginEnd="@dimen/v_24dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/topIc"
                    android:layout_width="@dimen/v_16dp"
                    android:layout_height="@dimen/v_16dp"
                    android:src="@drawable/r_address"
                    android:tint="@color/text_gray" />

                <TextView
                    android:id="@+id/topText"
                    style="@style/Models14SemiBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/v_6dp"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_14"
                    tools:text="Classical manicure and pedicure" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/v_10dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/bottomIc"
                    android:layout_width="@dimen/v_16dp"
                    android:layout_height="@dimen/v_16dp"
                    android:src="@drawable/ic_timer"
                    android:tint="@color/text_gray" />

                <TextView
                    android:id="@+id/bottomText"
                    style="@style/Models14SemiBoldText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/v_6dp"
                    android:textColor="@color/text_gray"
                    android:textSize="@dimen/text_14"
                    tools:text="Complimentary" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_1dp"
            android:layout_marginTop="@dimen/v_20dp"
            android:background="@color/gray_divider"
            app:layout_constraintTop_toBottomOf="@+id/ll"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/confirmAvailabilityTv"
            style="@style/Models16SemiBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_20dp"
            android:layout_marginStart="@dimen/v_20dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:textSize="@dimen/text_16"
            android:textColor="@color/text_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="CONFIRM AVAILABILITY DEC 25, 2019" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/rvNested"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/confirmAvailabilityTv" >

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                tools:itemCount="3"
                tools:listitem="@layout/item_schedule_availability" />

        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/button"
            style="@style/Models16Text"
            android:layout_width="0dp"
            android:layout_height="@dimen/v_56dp"
            android:layout_marginTop="@dimen/v_32dp"
            android:layout_marginStart="@dimen/v_20dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:background="@drawable/button_black_alpha"
            android:elevation="0dp"
            android:enabled="true"
            tools:text="@string/confirm_reservation"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rvNested"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>