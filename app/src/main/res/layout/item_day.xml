<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemDayContainer"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <TextView
        android:id="@+id/itemDayName"
        style="@style/Models18Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textAllCaps="true"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="T" />

    <FrameLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp">
        <androidx.appcompat.widget.AppCompatCheckedTextView
            android:id="@+id/itemDayValue"
            style="@style/Models16Text"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/item_day_selector"
            android:gravity="center"
            android:paddingStart="11.5dp"
            android:textColor="@color/day_text_color"
            app:layout_constraintEnd_toEndOf="@+id/itemDayName"
            app:layout_constraintStart_toStartOf="@+id/itemDayName"
            app:layout_constraintTop_toBottomOf="@+id/itemDayName"
            tools:text="25" />
    </FrameLayout>


</LinearLayout>