            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/v_32dp"
            android:clickable="false"
            android:enabled="false"
            android:checked="false"
            android:thumb="@drawable/switch_thumb"
