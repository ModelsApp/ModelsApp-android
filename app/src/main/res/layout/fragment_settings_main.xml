            android:textSize="@dimen/text_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/v_12dp"
            android:layout_marginEnd="@dimen/v_12dp"
            android:text="@string/credentials" />

        <ImageView
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:src="@drawable/chevron_right"
            android:tint="@color/text_gray"
            android:stateListAnimator="@animator/alpha_pressed_anim" />

    </LinearLayout>

    <!--    TODO: push notifications switch code is commented in EditProfileFragment        -->
    <LinearLayout
        android:id="@+id/pushNotificationsLl"
