<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools" >

<!--  TODO: picasso - round corners(16dp? 24dp?)  -->
    <ImageView
        android:id="@+id/scheduleImg"
        android:layout_width="@dimen/v_64dp"
        android:layout_height="@dimen/v_64dp"
        android:layout_marginStart="@dimen/v_24dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic[6]" />

    <LinearLayout
        android:id="@+id/scheduleLl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/v_16dp"
        android:layout_marginEnd="@dimen/v_8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/scheduleImg"
        app:layout_constraintEnd_toStartOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/scheduleImg"
        app:layout_constraintTop_toTopOf="@+id/scheduleImg" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/scheduleStatusCircle"
                android:layout_width="@dimen/v_8dp"
                android:layout_height="@dimen/v_8dp"
                android:src="@drawable/circle_white"
                tools:tint="@color/status_green" />
            <TextView
                android:id="@+id/scheduleName"
                style="@style/Models16SemiBoldText"
                android:textSize="@dimen/text_16"
                tools:text="La Perla d'Oro"
                android:layout_marginStart="@dimen/v_8dp"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/v_5dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/scheduleTopIc"
                android:layout_width="@dimen/v_12dp"
                android:layout_height="@dimen/v_12dp"
                android:src="@drawable/r_address"
                tools:tint="@color/text_gray" />
            <TextView
                android:id="@+id/scheduleTopText"
                style="@style/Models14SemiBoldText"
                android:textSize="@dimen/text_14"
                android:textColor="@color/text_gray"
                tools:text="La Perla d'Oro"
                android:layout_marginStart="@dimen/v_6dp"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/v_5dp"
            android:orientation="horizontal" >
            <ImageView
                android:id="@+id/scheduleBottomIc"
                android:layout_width="@dimen/v_12dp"
                android:layout_height="@dimen/v_12dp"
                android:src="@drawable/ic_timer"
                tools:tint="@color/text_gray" />
            <TextView
                android:id="@+id/scheduleBottomText"
                style="@style/Models14SemiBoldText"
                android:textSize="@dimen/text_14"
                android:textColor="@color/text_gray"
                tools:text="14:00 - 18:00"
                android:layout_marginStart="@dimen/v_6dp"
                android:layout_width="match_parent"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="@dimen/v_30dp"
        android:layout_height="@dimen/v_30dp"
        android:src="@drawable/more_vertical"
        android:tint="@color/text_gray"
        app:layout_constraintBottom_toBottomOf="@+id/scheduleImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/scheduleImg" />

</androidx.constraintlayout.widget.ConstraintLayout>