<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:animateLayoutChanges="true" >

    <LinearLayout
        android:id="@+id/eventSummaryLl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/eventSummaryBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_back"
            android:tint="@android:color/black" />

        <TextView
            style="@style/Models20SemiBoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/event_details" />
    </LinearLayout>

    <ImageView
        android:id="@+id/eventSummaryIcSos"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/r_dial"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/eventSummaryIcMessage"
        app:layout_constraintEnd_toStartOf="@+id/eventSummaryIcMessage"
        app:layout_constraintTop_toTopOf="@+id/eventSummaryIcMessage" />

    <ImageView
        android:id="@+id/eventSummaryIcMessage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="24dp"
        android:src="@drawable/ic_message"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="@+id/eventSummaryLl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/eventSummaryLl" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/eventSummaryList"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:overScrollMode="never"
        android:paddingStart="32dp"
        android:layout_marginTop="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="32dp"
        android:paddingBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/eventSummaryCheckOutLl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eventSummaryLl"
        tools:listitem="@layout/item_event_summary"
        tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

    <LinearLayout
        android:id="@+id/eventSummaryCheckOutLl"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        android:visibility="gone"
        tools:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray_divider" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/eventSummaryCheckOutCl"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:padding="8dp"
            android:gravity="center_vertical"
            android:background="@drawable/nice_button_purple_pink_alpha"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/eventSummaryCheckOutIc1"
                android:layout_width="48dp"
                android:layout_height="36dp"
                tools:background="@android:color/white"
                android:src="@drawable/r_dial"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/eventSummaryCheckOutLabel"
                style="@style/Models16Text"
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:text="@string/check_out_from_party"
                app:layout_constraintStart_toEndOf="@+id/eventSummaryCheckOutIc1"
                app:layout_constraintEnd_toStartOf="@+id/eventSummaryCheckOutIc2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <ImageView
                android:id="@+id/eventSummaryCheckOutIc2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                tools:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/r_dial"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>