<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:background="@color/white"
    tools:showIn="@layout/fragment_fill_profile_3" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Models14Text"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/grey_dark"
        android:text="@string/add_three_photos" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false" >

        <ImageView
            android:id="@+id/form3Img1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:elevation="3dp"
            android:outlineProvider="background"
            android:background="@drawable/background_rounded_12dp"
            android:src="@drawable/image_holder"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/form3Img2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="32dp"
            android:layout_marginBottom="12dp"
            android:elevation="3dp"
            android:outlineProvider="background"
            android:background="@drawable/background_rounded_12dp"
            android:src="@drawable/image_holder"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintBottom_toTopOf="@+id/guideline2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/form3Img1" />


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.6" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/form3Img3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_rounded_12dp"
            android:elevation="3dp"
            android:outlineProvider="background"
            android:src="@drawable/image_holder"
            app:layout_constraintBottom_toBottomOf="@+id/form3Img1"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/form3Img2"
            app:layout_constraintTop_toBottomOf="@id/guideline2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/form3ProfilePic"
            style="@style/Models14BoldText"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/profile_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/form3OtherPic"
            style="@style/Models14BoldText"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:text="@string/others"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/form3PhotoMissing"
        style="@style/Models14Text"
        android:textColor="@color/status_red"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="@string/photo_missing"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>