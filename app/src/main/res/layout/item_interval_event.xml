<?xml version="1.0" encoding="utf-8"?>
<com.square.android.utils.widget.CheckableLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/eventIntervalContainer"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="@drawable/interval_background" >

    <CheckedTextView
        android:id="@+id/eventInterval"
        style="@style/Models16Text"
        android:textColor="@color/interval_time_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="10:00 - 13:00" />

    <CheckedTextView
        android:id="@+id/eventIntervalSeparator1"
        style="@style/Models16Text"
        android:textColor="@color/interval_time_color"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="|"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <CheckedTextView
        android:id="@+id/eventIntervalDescription"
        style="@style/Models16Text"
        android:textColor="@color/interval_time_color"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAlignment="gravity"
        android:layout_height="wrap_content"
        tools:text="min. stay 2 h" />

    <CheckedTextView
        android:id="@+id/eventIntervalSeparator2"
        style="@style/Models16Text"
        android:textColor="@color/interval_time_color"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:text="|"
        android:includeFontPadding="false"
        android:gravity="center_vertical"
        android:textAlignment="gravity"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />

    <CheckedTextView
        android:id="@+id/eventIntervalSpots"
        style="@style/Models14Text"
        android:textColor="@color/interval_time_color"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:text="10" />

</com.square.android.utils.widget.CheckableLinearLayout>