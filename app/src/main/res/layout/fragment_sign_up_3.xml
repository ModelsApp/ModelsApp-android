<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingBottom="@dimen/v_16dp"
    android:paddingStart="@dimen/v_24dp"
    android:paddingEnd="@dimen/v_24dp"
    android:orientation="vertical"
    tools:background="@android:color/white" >

    <TextView
        android:id="@+id/requirementsTv"
        style="@style/Models16SemiBoldText"
        android:textSize="@dimen/text_16"
        android:gravity="center_vertical"
        android:drawableEnd="@drawable/chevron_right"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_48dp"
        android:text="@string/requirements" />

    <View
        android:layout_width="match_parent"
        android:layout_marginStart="@dimen/v_minus_24dp"
        android:layout_marginEnd="@dimen/v_minus_24dp"
        android:layout_height="1dp"
        android:background="@color/gray_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topContainer" />

    <TextView
        android:id="@+id/specialityCheckableTv"
        style="@style/Models16Text"
        android:textColor="@color/text_gray"
        android:layout_marginTop="@dimen/v_28dp"
        android:textSize="@dimen/text_16"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/connect_social_media" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/fbContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/v_8dp"
        android:paddingBottom="@dimen/v_8dp"
        android:layout_marginEnd="@dimen/v_minus_24dp"
        android:layout_marginTop="@dimen/v_20dp" >

        <ImageView
            android:id="@+id/fbImg"
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:src="@drawable/facebook_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/fbLabel"
            style="@style/Models16Text"
            android:textSize="@dimen/text_16"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Facebook"
            android:layout_marginStart="@dimen/v_24dp"
            app:layout_constraintTop_toTopOf="@id/fbImg"
            app:layout_constraintBottom_toBottomOf="@id/fbImg"
            app:layout_constraintStart_toEndOf="@id/fbImg" />

        <TextView
            android:id="@+id/fbTv"
            style="@style/Models15Text"
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v_8dp"
            app:layout_goneMarginStart="@dimen/v_8dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_15"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/fbImg"
            app:layout_constraintEnd_toStartOf="@+id/fbIc"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/fbLabel"
            app:layout_constraintTop_toTopOf="@id/fbImg"
            tools:text="\@accountname"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/fbIc"
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:src="@drawable/add"
            android:layout_marginEnd="@dimen/v_24dp"
            app:layout_constraintTop_toTopOf="@id/fbImg"
            app:layout_constraintBottom_toBottomOf="@id/fbImg"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/instagramContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/v_8dp"
        android:layout_marginEnd="@dimen/v_minus_24dp"
        android:layout_marginTop="@dimen/v_8dp" >

        <View
            android:id="@+id/instagramDivider"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/v_minus_24dp"
            android:layout_marginEnd="@dimen/v_minus_24dp"
            android:layout_height="1dp"
            android:background="@color/gray_divider"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/instagramLabel"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/instagramImg"
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:layout_marginTop="@dimen/v_16dp"
            android:src="@drawable/instagram_logo"
            app:layout_constraintTop_toBottomOf="@+id/instagramDivider"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/instagramLabel"
            style="@style/Models16Text"
            android:textSize="@dimen/text_16"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Instagram"
            android:layout_marginStart="@dimen/v_24dp"
            app:layout_constraintTop_toTopOf="@id/instagramImg"
            app:layout_constraintBottom_toBottomOf="@id/instagramImg"
            app:layout_constraintStart_toEndOf="@id/instagramImg" />

        <TextView
            android:id="@+id/instagramTv"
            style="@style/Models15Text"
            android:layout_width="wrap_content"
            app:layout_constrainedWidth="true"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/v_8dp"
            app:layout_goneMarginStart="@dimen/v_8dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_gray"
            android:textSize="@dimen/text_15"
            android:maxLines="1"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="@id/instagramImg"
            app:layout_constraintEnd_toStartOf="@+id/instagramIc"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toEndOf="@+id/instagramLabel"
            app:layout_constraintTop_toTopOf="@id/instagramImg"
            tools:text="\@accountname"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/instagramIc"
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            android:src="@drawable/add"
            app:layout_constraintTop_toTopOf="@id/instagramImg"
            app:layout_constraintBottom_toBottomOf="@id/instagramImg"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

