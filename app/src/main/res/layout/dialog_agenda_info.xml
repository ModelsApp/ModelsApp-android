<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/v_12dp"
    app:cardElevation="0dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/v_20dp"
        android:paddingBottom="@dimen/v_24dp"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/icClose"
            android:layout_width="@dimen/v_32dp"
            android:layout_height="@dimen/v_32dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:padding="@dimen/v_2dp"
            android:src="@drawable/close_x"
            android:layout_gravity="end" />

        <RelativeLayout
            android:layout_width="@dimen/v_50dp"
            android:layout_height="@dimen/v_50dp"
            android:background="@drawable/bg_round_stroke"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="@dimen/v_24dp"
                android:layout_height="@dimen/v_24dp"
                android:src="@drawable/ic_info" />
        </RelativeLayout>

        <TextView
            android:id="@+id/titleTv"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/v_16dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/what_these_colour_mean"
            android:gravity="center_horizontal" />

        <TextView
            android:id="@+id/subtitleTv"
            style="@style/Models16Text"
            android:textSize="@dimen/text_16"
            android:textColor="@color/text_gray"
            android:layout_marginTop="@dimen/v_8dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/colours_bottom_text"
            android:gravity="center_horizontal" />

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="@dimen/v_1dp"
            android:layout_marginTop="@dimen/v_24dp"
            android:layout_marginStart="@dimen/v_minus_24dp"
            android:layout_marginEnd="@dimen/v_minus_24dp"
            android:background="@color/gray_divider" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scheduleNested"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_marginTop="@dimen/v_24dp"
            android:layout_marginBottom="@dimen/v_16dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/v_8dp"
                android:paddingStart="@dimen/v_24dp"
                android:paddingEnd="@dimen/v_24dp"
                android:orientation="vertical" >

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >
                <ImageView
                    android:layout_width="@dimen/v_10dp"
                    android:layout_height="@dimen/v_10dp"
                    android:src="@drawable/circle_white"
                    android:tint="@color/nice_violet" />
                <TextView
                    style="@style/Models16SemiBoldText"
                    android:textSize="@dimen/text_16"
                    android:layout_marginStart="@dimen/v_8dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/colour_desc_1" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="@dimen/v_10dp"
                        android:layout_height="@dimen/v_10dp"
                        android:src="@drawable/circle_white"
                        android:tint="@color/nice_blue" />
                    <TextView
                        style="@style/Models16SemiBoldText"
                        android:textSize="@dimen/text_16"
                        android:layout_marginStart="@dimen/v_8dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colour_desc_2" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="@dimen/v_10dp"
                        android:layout_height="@dimen/v_10dp"
                        android:src="@drawable/circle_white"
                        android:tint="@color/status_green" />
                    <TextView
                        style="@style/Models16SemiBoldText"
                        android:textSize="@dimen/text_16"
                        android:layout_marginStart="@dimen/v_8dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colour_desc_3" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/v_24dp"
                    android:orientation="horizontal" >
                    <ImageView
                        android:layout_width="@dimen/v_10dp"
                        android:layout_height="@dimen/v_10dp"
                        android:src="@drawable/circle_white"
                        android:tint="@color/yellow" />
                    <TextView
                        style="@style/Models16SemiBoldText"
                        android:textSize="@dimen/text_16"
                        android:layout_marginStart="@dimen/v_8dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/colour_desc_4" />
                </LinearLayout>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <Button
            android:id="@+id/btnGotIt"
            style="@style/Models16Text"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/v_24dp"
            android:layout_height="@dimen/auth_btn_height"
            android:background="@drawable/background_rounded_12dp"
            android:backgroundTint="@android:color/black"
            android:text="@string/got_it"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</androidx.cardview.widget.CardView>