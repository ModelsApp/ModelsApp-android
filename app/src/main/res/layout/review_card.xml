<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:layout_width="200dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="false"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    tools:visibility="visible" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviewContainer"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"
        android:background="@drawable/checkable_background" >

        <ImageView
            android:id="@+id/reviewItemLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:cropToPadding="false"
            android:scaleType="centerInside"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@drawable/trip_advisor_logo" />

        <TextView
            android:id="@+id/reviewItemTitle"
            style="@style/Models18BoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:includeFontPadding="false"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/reviewItemLogo"
            tools:text="Tripadvisor" />

        <View
            android:id="@+id/reviewDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="@color/gray_divider"
            app:layout_constraintEnd_toEndOf="@+id/reviewItemTitle"
            app:layout_constraintStart_toStartOf="@+id/reviewItemTitle"
            app:layout_constraintTop_toBottomOf="@+id/reviewItemTitle" />

        <TextView
            android:id="@+id/reviewItemCoins"
            style="@style/Models20BoldText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:layout_marginTop="8dp"
            android:textColor="@color/nice_pink"
            app:layout_constraintEnd_toEndOf="@+id/reviewDivider"
            app:layout_constraintStart_toStartOf="@+id/reviewDivider"
            app:layout_constraintTop_toBottomOf="@+id/reviewDivider"
            tools:text="+40" />

        <TextView
            android:id="@+id/reviewItemCreditsLabel"
            style="@style/Models14Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/credits"
            android:textColor="@color/gray_hint"
            app:layout_constraintEnd_toEndOf="@+id/reviewItemCoins"
            app:layout_constraintStart_toStartOf="@+id/reviewItemCoins"
            app:layout_constraintTop_toBottomOf="@+id/reviewItemCoins" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>