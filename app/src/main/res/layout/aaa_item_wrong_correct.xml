<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/wrong_correct_height"
    android:orientation="horizontal" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wrongContainer"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginEnd="12dp"
        android:layout_height="match_parent" >

        <!--  TODO loadImage with roundedCornersRadiusPx -->
        <ImageView
            android:id="@+id/wrongImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/wrongText"
            android:layout_marginBottom="8dp"
            tools:scaleType="centerCrop"
            tools:src="@drawable/auth_background" />

        <ImageView
            android:layout_width="@dimen/wrong_correct_icSize"
            android:layout_height="@dimen/wrong_correct_icSize"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/wrongImage"
            app:layout_constraintEnd_toEndOf="@+id/wrongImage"
            android:src="@drawable/cancel_circle_red" />

        <TextView
            android:id="@+id/wrongText"
            style="@style/Models14SemiBoldText"
            android:textSize="@dimen/wrong_correct_textSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            tools:text="Wrong light"
            android:maxLines="2"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/correctContainer"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_marginStart="12dp"
        android:layout_height="match_parent" >

        <!--  TODO loadImage with roundedCornersRadiusPx -->
        <ImageView
            android:id="@+id/correctImage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/correctText"
            android:layout_marginBottom="8dp"
            tools:scaleType="centerCrop"
            tools:src="@drawable/auth_background" />

        <ImageView
            android:layout_width="@dimen/wrong_correct_icSize"
            android:layout_height="@dimen/wrong_correct_icSize"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/correctImage"
            app:layout_constraintEnd_toEndOf="@+id/correctImage"
            android:src="@drawable/check_circle_green" />

        <TextView
            android:id="@+id/correctText"
            style="@style/Models14SemiBoldText"
            android:textSize="@dimen/wrong_correct_textSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            tools:text="Correct light"
            android:maxLines="2"
            app:autoSizeTextType="uniform"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>


