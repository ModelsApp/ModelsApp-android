<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/v_8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/v_16dp"
        android:background="@android:color/white" >

        <TextView
            style="@style/Models16Text"
            android:textSize="@dimen/text_16"
            android:layout_marginTop="@dimen/v_24dp"
            android:layout_marginStart="@dimen/v_20dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sure_discard_changes"
            android:gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/v_32dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/cancel"
                style="@style/Models15Text"
                android:textSize="@dimen/text_15"
                android:textColor="@color/text_gray"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:foreground="?attr/selectableItemBackground"
                android:paddingStart="@dimen/v_12dp"
                android:paddingEnd="@dimen/v_12dp"
                android:paddingTop="@dimen/v_8dp"
                android:paddingBottom="@dimen/v_8dp"
                android:text="@string/cancel"
                android:gravity="center" />

            <TextView
                style="@style/Models15Text"
                android:textSize="@dimen/text_15"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="match_parent"
                android:gravity="center" />

            <TextView
                android:id="@+id/discard"
                style="@style/Models15Text"
                android:textSize="@dimen/text_15"
                android:textColor="@color/nice_pink"
                android:paddingStart="@dimen/v_12dp"
                android:paddingEnd="@dimen/v_12dp"
                android:paddingTop="@dimen/v_8dp"
                android:paddingBottom="@dimen/v_8dp"
                android:foreground="?attr/selectableItemBackground"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/discard"
                android:gravity="center" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>