        <TextView
            android:id="@+id/partyServicesLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/partyRequirementsRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/services"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyServicesRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyServicesLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyDinnerLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/partyServicesRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
