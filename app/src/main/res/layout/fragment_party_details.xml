<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical" >

    <!--////////// About //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partyAboutCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:clipChildren="false"
        android:clipToPadding="false" >

        <TextView
            android:id="@+id/partyAboutLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/partyAboutImage"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:src="@drawable/r_shoe"
            app:layout_constraintBottom_toBottomOf="@+id/partyAboutLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/partyAboutLabel" />

        <TextView
            android:id="@+id/partyAbout"
            style="@style/Models16Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyAboutLabel"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut laborÄ™ et dolore magna aliqua. iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii" />

        <LinearLayout
            android:id="@+id/partyReadMore"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/partyAbout"
            app:layout_constraintEnd_toEndOf="@+id/partyAbout" >

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/shadow_horizontal" />

            <TextView
                android:id="@+id/partyShowMore"
                style="@style/Models16BoldText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end|bottom"
                android:background="@android:color/white"
                android:paddingStart="6dp"
                android:text="@string/show_more"
                android:textColor="@color/nice_pink" />
        </LinearLayout>

        <View
            android:id="@+id/separatorThree"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyAboutRv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyAboutRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:background="@color/grey_dark"
            android:nestedScrollingEnabled="false"
            tools:visibility="visible"
            tools:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyAbout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

