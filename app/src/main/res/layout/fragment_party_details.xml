    <!--////////// Calendar //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partyCalendarCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        tools:visibility="gone"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/partyBookingMonth"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SEPTEMBER 2019" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyBookingCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyBookingMonth"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyDinnerInfoLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/dinner_info"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyBookingCalendar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyDinnerInfoRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:visibility="visible"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyDinnerInfoLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyTimeframesLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/party_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyDinnerInfoRv" />

        <ProgressBar
            android:id="@+id/partyProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:indeterminateTint="@color/nice_red"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/partyTimeframesLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyIntervalsRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:visibility="visible"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyProgress"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyIntervalsInfo"
            style="@style/Models14Text"
            android:textColor="@color/secondary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            tools:text="* Event starting on May 7th and ending on May 8th."
            app:layout_constraintTop_toBottomOf="@+id/partyIntervalsRv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ////////// Offers //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partyOffersCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
