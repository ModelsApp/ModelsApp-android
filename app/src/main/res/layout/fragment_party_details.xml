<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical" >

    <!--////////// About //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partyAboutCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:clipChildren="false"
        android:clipToPadding="false" >

        <TextView
            android:id="@+id/partyAboutLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/partyAboutImage"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:src="@drawable/r_shoe"
            app:layout_constraintBottom_toBottomOf="@+id/partyAboutLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/partyAboutLabel" />

        <TextView
            android:id="@+id/partyAbout"
            style="@style/Models16Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyAboutLabel"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut laborÄ™ et dolore magna aliqua. iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii" />

        <LinearLayout
            android:id="@+id/partyReadMore"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/partyAbout"
            app:layout_constraintEnd_toEndOf="@+id/partyAbout" >

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/shadow_horizontal" />

            <TextView
                android:id="@+id/partyShowMore"
                style="@style/Models16BoldText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end|bottom"
                android:background="@android:color/white"
                android:paddingStart="6dp"
                android:text="@string/show_more"
                android:textColor="@color/nice_pink" />
        </LinearLayout>

        <View
            android:id="@+id/separatorThree"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyAboutRv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyAboutRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:background="@color/grey_dark"
            android:nestedScrollingEnabled="false"
            tools:visibility="visible"
            tools:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyAbout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--////////// Requirements //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partyRequirementsCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:clipChildren="false"
        android:clipToPadding="false" >

        <TextView
            android:id="@+id/partyRequirementsLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/requirements"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyRequirementsRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyRequirementsLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyServicesLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/partyRequirementsRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/services"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyServicesRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyServicesLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyDinnerLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/partyServicesRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/dinner"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyDinnerRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyDinnerLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyExtraLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/partyDinnerRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/extra"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyExtraRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyExtraLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--////////// Calendar //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partyCalendarCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/partyBookingMonth"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SEPTEMBER 2019" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyBookingCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyBookingMonth"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyDinnerInfoLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/dinner_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyBookingCalendar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyDinnerInfoRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:visibility="visible"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyDinnerInfoLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyTimeframesLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/party_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyDinnerInfoRv" />

        <ProgressBar
            android:id="@+id/partyProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:indeterminateTint="@color/nice_red"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@+id/partyTimeframesLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyIntervalsRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:visibility="visible"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyProgress"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/partyIntervalsInfo"
            style="@style/Models14Text"
            android:textColor="@color/secondary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            tools:text="* Event starting on May 7th and ending on May 8th."
            app:layout_constraintTop_toBottomOf="@+id/partyIntervalsRv"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/partyrOffersLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:text="@string/offers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyIntervalsInfo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/partyOffersRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyrOffersLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

<!-- ////////// Details //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/partyDetailsCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/ac_place_default_margin"
        android:layout_marginEnd="@dimen/ac_place_default_margin"
        android:layout_marginTop="@dimen/ac_place_default_margin"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/partyDetailsLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TODO remember to round image corners 4dp with picasso -->
        <ImageView
            android:id="@+id/partyDetailImg"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="2dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_rounded_4dp"
            android:backgroundTint="@color/nice_pink"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyDetailsLabel"
            tools:scaleType="fitXY"
            tools:src="@drawable/auth_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/partyDetailImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/partyDetailImg"
            app:layout_constraintTop_toTopOf="@+id/partyDetailImg">

            <TextView
                style="@style/Models14BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/how_to_make_credits"
                app:layout_constraintStart_toEndOf="@+id/partyDetailImg"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/partyDetailHow1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/partyDetailHow1Name"
                    style="@style/Models14Text"
                    android:textColor="@color/secondary_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:paddingEnd="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    tools:text="2 hours min. stay:" />
                <TextView
                    android:id="@+id/partyDetailHow1Value"
                    style="@style/Models14Text"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    tools:text="+ 600 credits" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/partyDetailHow2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/partyDetailHow2Name"
                    style="@style/Models14Text"
                    android:textColor="@color/secondary_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:paddingEnd="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    tools:text="Each extra hour" />
                <TextView
                    android:id="@+id/partyDetailHow2Value"
                    style="@style/Models14Text"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    tools:text="+ 150 credits" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/partyDetailHow3"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/partyDetailHow3Name"
                    style="@style/Models14Text"
                    android:textColor="@color/secondary_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:paddingEnd="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    tools:text="Each extra hour" />
                <TextView
                    android:id="@+id/partyDetailHow3Value"
                    style="@style/Models14Text"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    tools:text="+ 150 credits" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/partyDetailName"
            style="@style/Models16BoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/partyDetailImg"
            app:layout_constraintTop_toBottomOf="@+id/partyDetailImg"
            tools:text="Night out" />

        <TextView
            android:id="@+id/partyDetailCredits"
            style="@style/Models13BoldText"
            android:layout_marginTop="3dp"
            android:textColor="@color/nice_pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/partyDetailImg"
            app:layout_constraintTop_toBottomOf="@+id/partyDetailName"
            tools:text="- 300 credits" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>