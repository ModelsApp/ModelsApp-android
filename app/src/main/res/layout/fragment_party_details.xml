            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partyDinnerLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

