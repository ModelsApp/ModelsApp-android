<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="8dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="32dp" >

        <ImageView
            android:id="@+id/earnedDialogImg"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            tools:src="@drawable/undraw_savings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/earnedDialogLabel"
            style="@style/Models24SemiBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center"
            tools:text="You've earned 200 credits!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/earnedDialogImg" />

        <TextView
            android:id="@+id/earnedDialogText"
            style="@style/Models18Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:lineSpacingExtra="8dp"
            android:gravity="center"
            tools:text="Since you completed this gifting campaign you have earned 200 credits."
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/earnedDialogLabel" />

        <LinearLayout
            android:id="@+id/earnedDialogLl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/earnedDialogText" >

            <TextView
                style="@style/Models20Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/current_balance_" />

            <TextView
                style="@style/Models20SemiBoldText"
                android:textColor="@color/nice_pink"
                android:id="@+id/earnedDialogBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="350 credits"
                android:layout_marginStart="4dp" />
        </LinearLayout>

        <Button
            android:id="@+id/earnedDialogOk"
            style="@style/Models16SemiBoldText"
            android:layout_width="128dp"
            android:layout_height="38dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:background="@drawable/nice_button_red_pink"
            android:text="@string/ok"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/earnedDialogLl"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>