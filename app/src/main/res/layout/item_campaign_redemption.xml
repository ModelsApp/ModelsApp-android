<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:id="@+id/campaignRedemptionContainer"
    android:paddingBottom="16dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <com.square.android.ui.view.CircleImageView
            android:id="@+id/campaign_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_marginStart="12dp"
            android:background="@drawable/round_background"
            android:tint="@color/white"
            android:cropToPadding="false"
            android:padding="1dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:backgroundTint="@android:color/black"
            tools:src="@drawable/round_background" />

        <TextView
            android:id="@+id/campaign_title"
            style="@style/Models15SemiBoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="@+id/campaign_image"
            app:layout_constraintStart_toEndOf="@+id/campaign_image"
            app:layout_constraintEnd_toEndOf="@+id/campaign_divider_end"
            tools:text="Emporio Armani" />

        <TextView
            android:id="@+id/campaign_hashtag"
            style="@style/Models12SemiBoldText"
            android:textColor="@color/gray_hint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="1dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@+id/campaign_title"
            app:layout_constraintStart_toEndOf="@+id/campaign_image"
            app:layout_constraintEnd_toEndOf="@+id/campaign_divider_end"
            tools:text="#emporioarmani" />

        <TextView
            android:id="@+id/campaign_type"
            style="@style/Models13Text"
            android:textColor="@color/nice_pink"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintBottom_toBottomOf="@+id/campaign_image"
            app:layout_constraintStart_toEndOf="@+id/campaign_image"
            app:layout_constraintEnd_toEndOf="@+id/campaign_divider_end"
            tools:text="Gift campaign" />

        <View
            android:id="@+id/campaign_divider_end"
            android:layout_width="0.75dp"
            android:layout_height="0dp"
            android:layout_marginEnd="80dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <View
            android:id="@+id/campaign_divider"
            android:layout_width="0dp"
            android:layout_height="0.75dp"
            android:background="@color/divider"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toEndOf="@+id/campaign_divider_end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/campaign_btn_top"
            style="@style/Models13SemiBoldText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="13sp"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/campaign_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/campaign_divider_end"
            tools:text="Details" />

        <TextView
            android:id="@+id/campaign_btn_bottom"
            style="@style/Models13SemiBoldText"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMaxTextSize="13sp"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="visible"
            android:maxLines="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toBottomOf="@+id/campaign_divider"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/campaign_divider_end"
            tools:textColor="@color/status_red"
            tools:text="Cancel" />

        <ImageView
            android:id="@+id/campaign_imv_center"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:scaleType="centerInside"
            tools:src="@drawable/r_hanger"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/campaign_divider_end" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>