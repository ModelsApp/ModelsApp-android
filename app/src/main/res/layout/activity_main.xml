<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="false"
    android:background="@android:color/white"
    tools:background="@color/status_green"
    tools:context=".ui.activity.main.MainActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent" >

            <FrameLayout
                android:id="@+id/main_container"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.square.android.utils.widget.ExtendedBottomNavigationView
                android:id="@+id/bottomNavigation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:itemBackground="@color/white"
                app:itemIconTint="@drawable/navigation_color_set"
                app:itemTextColor="@drawable/navigation_color_set"
                app:labelVisibilityMode="labeled"
                app:menu="@menu/main_navigation_menu" />

        </LinearLayout>

<!--   TODO check if bottom margin gone is working     -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/navFab"
            android:layout_width="@dimen/v_40dp"
            android:layout_height="@dimen/v_40dp"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_marginBottom="@dimen/v_16dp"
            android:backgroundTint=""
            app:elevation="@dimen/v_2dp"
            android:src="@drawable/ic_navigation"
            app:fabSize="normal"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintStart_toStartOf="@+id/mainFab"
            app:layout_constraintEnd_toEndOf="@+id/mainFab"
            app:layout_constraintBottom_toTopOf="@+id/mainFab" />


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/mainFab"
            android:layout_width="@dimen/v_48dp"
            android:layout_height="@dimen/v_48dp"
            style="@style/Widget.MaterialComponents.FloatingActionButton"
            android:layout_marginBottom="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            app:layout_goneMarginBottom="@dimen/v_72dp"
            android:backgroundTint=""
            app:elevation="@dimen/v_2dp"
            android:src="@drawable/ic_list"
            app:fabSize="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/bottomViewMapLl" />

        <LinearLayout
            android:id="@+id/bottomViewMapLl"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <include
                android:id="@+id/mapInfo"
                layout="@layout/bottom_view_map"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_marginBottom="@dimen/v_minus_24dp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include
        android:id="@+id/pending_screen"
        layout="@layout/pending_congratulations"
        android:visibility="gone"
        android:layout_height="match_parent"
        android:layout_width="match_parent" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>