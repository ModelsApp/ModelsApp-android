<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:id="@+id/main_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:itemBackground="@color/white"
            app:itemIconTint="@drawable/navigation_color_set"
            app:labelVisibilityMode="unlabeled"
            app:menu="@menu/main_navigation_menu" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pending_splash"
        android:gravity="center"
        android:padding="60dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:src="@drawable/pending_splash"
            android:scaleType="centerCrop"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp" />
        <TextView
            style="@style/Models18Text"
            android:textStyle="bold"
            android:text="@string/thank_you_for_interest"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/Models18Text"
            android:text="@string/pending_text_1"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:id="@+id/pending_text_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            style="@style/Models18Text"
            android:text="@string/pending_text_2"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:id="@+id/pending_text_2"
            android:textColorLink="@color/models_text_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/pending_button_video"
            style="@style/Models16BoldText"
            android:layout_width="200dp"
            android:layout_height="42dp"
            android:layout_marginTop="24dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/nice_button_red_pink"
            android:text="@string/watch_our_video"
            android:textStyle="normal"
            android:textColorLink="@color/white"
            android:textAllCaps="false"
            android:textColor="@color/btn_text_color"
            android:layout_marginBottom="24dp"/>
        <TextView
            android:id="@+id/read_acceptation_policy"
            style="@style/Models18Text"
            android:text="@string/read_acceptation_policy"
            android:textColorLink="@color/models_text_color"
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>