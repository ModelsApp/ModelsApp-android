<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="32dp"
    android:paddingEnd="32dp"
    tools:showIn="@layout/fragment_fill_profile_2">

    <com.square.android.utils.widget.ErrorEditText
        android:id="@+id/formProfileAccount"
        style="@style/InputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/username_instagram_account" />

    <LinearLayout
        android:id="@+id/formDialPhoneLl"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/input_field_spinner_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/formDialCountryLl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <ImageView
                android:id="@+id/formDialFlag"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:layout_marginStart="16dp"
                tools:src="@drawable/flag_ac" />

            <TextView
                android:id="@+id/formDialCode"
                style="@style/Models14Text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="+1" />
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_height="match_parent"
            android:background="@color/divider" />

        <com.square.android.utils.widget.ErrorEditText
            android:id="@+id/formDialPhoneNumber"
            android:layout_width="match_parent"
            style="@style/BaseEditText"
            android:layout_height="match_parent"
            android:background="@null"
            android:paddingStart="8dp"
            android:paddingEnd="16dp"
            android:hint="@string/phone"
            android:inputType="phone" />

    </LinearLayout>

    <com.square.android.utils.widget.ErrorEditText
        android:id="@+id/formProfileMotherAgency"
        style="@style/InputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_mother_agency"
        android:inputType="textPersonName" />

    <com.square.android.utils.widget.ErrorEditText
        android:id="@+id/formProfileCurrentAgency"
        style="@style/InputField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/your_current_agency"
        android:inputType="textPersonName" />

</LinearLayout>