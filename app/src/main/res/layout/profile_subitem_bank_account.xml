<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/subitem_top_margin" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/bankAccountIcon"
            android:layout_width="@dimen/subitem_bank_account_img_width"
            android:layout_height="@dimen/subitem_bank_account_img_height"
            android:scaleType="fitXY"
            tools:src="@drawable/r_shop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/subitem_bank_account_start_margin"
            android:layout_marginEnd="@dimen/subitem_left_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bankAccountTitle"
                style="@style/Models15SemiBoldText"
                android:textSize="@dimen/frag_profile_text_size_smaller"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                app:autoSizeTextType="uniform"
                tools:text="*** 3453" />

        </LinearLayout>

        <RadioButton
            android:id="@+id/bankAccountRb"
            android:button="@drawable/radio_btn_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:enabled="false"
            android:textColor="@color/grey_text_field" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/subitem_bottom_margin" />

</LinearLayout>