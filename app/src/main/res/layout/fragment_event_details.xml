<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical" >

    <!--////////// About //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventAboutCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:visibility="visible"
        android:clipChildren="false"
        android:clipToPadding="false" >

        <TextView
            android:id="@+id/eventAboutLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/about"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/eventAboutImage"
            android:layout_width="0dp"
            android:layout_height="32dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            tools:src="@drawable/r_shoe"
            app:layout_constraintBottom_toBottomOf="@+id/eventAboutLabel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/eventAboutLabel" />

        <TextView
            android:id="@+id/eventAbout"
            style="@style/Models16Text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventAboutLabel"
            tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut laborÄ™ et dolore magna aliqua. iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii" />

        <LinearLayout
            android:id="@+id/eventReadMore"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:orientation="horizontal"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/eventAbout"
            app:layout_constraintEnd_toEndOf="@+id/eventAbout" >

            <View
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/shadow_horizontal" />

            <TextView
                android:id="@+id/eventShowMore"
                style="@style/Models16BoldText"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="end|bottom"
                android:background="@android:color/white"
                android:paddingStart="6dp"
                android:text="@string/show_more"
                android:textColor="@color/nice_pink" />
        </LinearLayout>

        <View
            android:id="@+id/separatorThree"
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventAboutRv" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventAboutRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:background="@color/grey_dark"
            android:nestedScrollingEnabled="false"
            tools:visibility="visible"
            tools:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventAbout" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--////////// Requirements //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventRequirementsCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:clipChildren="false"
        android:clipToPadding="false" >

        <TextView
            android:id="@+id/eventRequirementsLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/requirements"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventRequirementsRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventRequirementsLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/eventServicesLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/eventRequirementsRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/services"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventServicesRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventServicesLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/eventDinnerLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/eventServicesRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/dinner"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventDinnerRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventDinnerLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/eventExtraLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/eventDinnerRv"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/extra"
            tools:visibility="gone"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventExtraRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            tools:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventExtraLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--////////// Calendar //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventCalendarCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/eventBookingMonth"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAllCaps="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SEPTEMBER 2019" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventBookingCalendar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:nestedScrollingEnabled="false"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:scrollbars="none"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventBookingMonth"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/eventDinnerInfoLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:visibility="visible"
            android:text="@string/dinner_options"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventBookingCalendar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventDinnerInfoRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:visibility="visible"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventDinnerInfoLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

        <TextView
            android:id="@+id/eventTimeframesLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:text="@string/party_time"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventDinnerInfoRv" />

        <com.square.android.utils.widget.CheckableLinearLayout
            android:id="@+id/eventIntervalContainer"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:layout_marginTop="16dp"
            android:padding="12dp"
            android:background="@drawable/interval_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventTimeframesLabel" >

            <CheckedTextView
                android:id="@+id/eventInterval"
                style="@style/Models16Text"
                android:textColor="@color/interval_time_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="10:00 - 13:00" />

            <CheckedTextView
                android:id="@+id/eventIntervalSeparator1"
                style="@style/Models16Text"
                android:textColor="@color/interval_time_color"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="|"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckedTextView
                android:id="@+id/eventIntervalDescription"
                style="@style/Models16Text"
                android:textColor="@color/interval_time_color"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:textAlignment="gravity"
                android:layout_height="wrap_content"
                tools:text="min. stay 2 h" />

            <CheckedTextView
                android:id="@+id/eventIntervalSeparator2"
                style="@style/Models16Text"
                android:textColor="@color/interval_time_color"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="|"
                android:includeFontPadding="false"
                android:gravity="center_vertical"
                android:textAlignment="gravity"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />

            <CheckedTextView
                android:id="@+id/eventIntervalSpots"
                style="@style/Models14Text"
                android:textColor="@color/interval_time_color"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                tools:text="10" />

        </com.square.android.utils.widget.CheckableLinearLayout>

        <TextView
            android:id="@+id/eventIntervalsInfo"
            style="@style/Models14Text"
            android:textColor="@color/secondary_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            tools:visibility="visible"
            tools:text="* Event starting on May 7th and ending on May 8th."
            app:layout_constraintTop_toBottomOf="@+id/eventIntervalContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/eventrOffersLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/ac_place_default_margin"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            android:text="@string/offers"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventIntervalsInfo" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/eventOffersRv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingStart="@dimen/ac_place_default_margin"
            android:paddingEnd="@dimen/ac_place_default_margin"
            android:visibility="gone"
            android:nestedScrollingEnabled="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventrOffersLabel"
            tools:background="@color/gray_hint"
            tools:layout_height="50dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

<!-- ////////// Details //////////-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/eventDetailsCl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tools:visibility="visible"
        android:layout_marginStart="@dimen/ac_place_default_margin"
        android:layout_marginEnd="@dimen/ac_place_default_margin"
        android:layout_marginTop="@dimen/ac_place_default_margin"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:paddingBottom="20dp" >

        <TextView
            android:id="@+id/eventDetailsLabel"
            style="@style/Models16Text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/details"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- TODO remember to round image corners 4dp with picasso -->
        <ImageView
            android:id="@+id/eventDetailImg"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:padding="2dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_rounded_4dp"
            android:backgroundTint="@color/nice_pink"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/eventDetailsLabel"
            tools:scaleType="fitXY"
            tools:src="@drawable/auth_background" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@+id/eventDetailImg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/eventDetailImg"
            app:layout_constraintTop_toTopOf="@+id/eventDetailImg">

            <TextView
                style="@style/Models14BoldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/how_to_make_credits"
                app:layout_constraintStart_toEndOf="@+id/eventDetailImg"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/eventDetailHow1"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/eventDetailHow1Name"
                    style="@style/Models14Text"
                    android:textColor="@color/secondary_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:paddingEnd="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    tools:text="2 hours min. stay:" />
                <TextView
                    android:id="@+id/eventDetailHow1Value"
                    style="@style/Models14Text"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    tools:text="+ 600 credits" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eventDetailHow2"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/eventDetailHow2Name"
                    style="@style/Models14Text"
                    android:textColor="@color/secondary_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:paddingEnd="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    tools:text="Each extra hour" />
                <TextView
                    android:id="@+id/eventDetailHow2Value"
                    style="@style/Models14Text"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    tools:text="+ 150 credits" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/eventDetailHow3"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="6dp"
                android:visibility="gone"
                android:layout_height="wrap_content" >
                <TextView
                    android:id="@+id/eventDetailHow3Name"
                    style="@style/Models14Text"
                    android:textColor="@color/secondary_text"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:paddingEnd="4dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    tools:text="Each extra hour" />
                <TextView
                    android:id="@+id/eventDetailHow3Value"
                    style="@style/Models14Text"
                    android:layout_width="0dp"
                    android:layout_weight="0.35"
                    android:gravity="end"
                    android:layout_height="wrap_content"
                    tools:text="+ 150 credits" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/eventDetailName"
            style="@style/Models16BoldText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/eventDetailImg"
            app:layout_constraintTop_toBottomOf="@+id/eventDetailImg"
            tools:text="Night out" />

        <TextView
            android:id="@+id/eventDetailCredits"
            style="@style/Models13BoldText"
            android:layout_marginTop="3dp"
            android:textColor="@color/nice_pink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/eventDetailImg"
            app:layout_constraintTop_toBottomOf="@+id/eventDetailName"
            tools:text="- 300 credits" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>