<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true" >

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/placeDetailAppbar"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/placeDetailCollapsing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@android:color/white"
            app:expandedTitleTextAppearance="@style/CollapsingToolbarLayoutExpandedTextStyle"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true">

                <View
                    android:id="@+id/placeDetailFade"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@drawable/profile_header"
                    android:translationZ="10dp" />

                <ImageView
                    android:id="@+id/placeDetailAvatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    android:scaleType="centerCrop"
                    app:layout_collapseMode="parallax" />
            </FrameLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/placeDetailToolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:title="@string/place_detail_title" />
        </com.google.android.material.appbar.CollapsingToolbarLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <!-- visible when image is collapsed -->
            <View
                android:id="@+id/separatorOne"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:visibility="gone"
                android:background="@color/divider"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- gone when image is collapsed -->
            <TextView
                android:id="@+id/placeDetailName"
                style="@style/Models24Text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:includeFontPadding="false"
                android:paddingBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/separatorOne"
                tools:text="Pizza Shushi" />

<!--////////// Location //////////-->
            <!-- add paddingTop 12  when image is collapsed -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/placeAddressCl"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingBottom="20dp"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeDetailName" >

                <ImageView
                    android:id="@+id/placePinImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_my_location"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/placeDetailAddress" />

                <ImageView
                    android:id="@+id/placeDistanceImage"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_my_location"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/placeDetailAddress" />

                <TextView
                    android:id="@+id/placeDetailAddress"
                    style="@style/Models16Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:lineSpacingExtra="8dp"
                    app:layout_constraintEnd_toStartOf="@+id/placeDistance"
                    app:layout_constraintStart_toEndOf="@+id/placePinImage"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Via Vigevano, 13\n20127, Milan" />

                <TextView
                    android:id="@+id/placeDistance"
                    style="@style/Models16Text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="start"
                    android:includeFontPadding="false"
                    android:minWidth="24dp"
                    app:layout_constraintEnd_toEndOf="@+id/placeDistanceImage"
                    app:layout_constraintTop_toBottomOf="@+id/placeDistanceImage"
                    tools:text="150" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:id="@+id/separatorTwo"
                android:layout_width="match_parent"
                android:layout_height="1.5dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@color/divider"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/placeAddressCl"
                tools:visibility="visible" />

            <LinearLayout
                android:id="@+id/constraintLayout"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:clipToPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/separatorTwo" >

<!--////////// About //////////-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/placeAboutCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    tools:visibility="gone"
                    android:clipChildren="false" >

                    <TextView
                        android:id="@+id/placeAboutLabel"
                        style="@style/Models16Text"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/about" />

                    <ImageView
                        android:id="@+id/placeAboutImage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:src="@drawable/ic_my_location"
                        app:layout_constraintBottom_toBottomOf="@+id/placeAboutLabel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/placeAboutLabel" />

<!--                    <FrameLayout-->
<!--                        android:id="@+id/description_fr"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_below="@id/separator">-->
<!--                        <TextView-->
<!--                            android:id="@+id/description"-->
<!--                            style="@style/Zrzutka15Text"-->
<!--                            tools:text="To jest opis. Opisujemy tutaj na co zbieramy, na czym polega nasza zrzutka. The End."-->
<!--                            android:textColor="@color/zrzutka_black"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="@{viewModel.chipinData.contentFormatted}"-->
<!--                            chipinViewModel="@{viewModel}"-->
<!--                            shouldShowFullText="@{viewModel.shouldShowFullText}"-->
<!--                            android:layout_gravity="top"-->
<!--                            android:maxLines="@{viewModel.textLinesToShow}" />-->
<!--                        <View-->
<!--                            android:id="@+id/read_more_shadow"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_gravity="bottom"-->
<!--                            android:layout_height="32dp"-->
<!--                            android:visibility="@{viewModel.shouldShowReadMore &amp;&amp; !viewModel.loading ? View.VISIBLE : View.GONE}"-->
<!--                            android:background="@drawable/read_more_shadow" />-->
<!--                    </FrameLayout>-->

<!--                    <TextView-->
<!--                        android:id="@+id/read_more_tv"-->
<!--                        android:layout_width="match_parent"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:text="@string/read_more"-->
<!--                        android:layout_marginTop="4dp"-->
<!--                        android:gravity="start"-->
<!--                        style="@style/Zrzutka15Text"-->
<!--                        android:onClick="@{() -> viewModel.onReadMoreClick()}"-->
<!--                        android:visibility="@{viewModel.shouldShowReadMore &amp;&amp; !viewModel.loading ? View.VISIBLE : View.GONE}"-->
<!--                        android:textColor="@{viewModel.shouldShowReadMore ? @color/zrzutka_pinker : @android:color/transparent}"-->
<!--                        android:layout_below="@id/description_fr" />-->

                    <TextView
                        android:id="@+id/placeAbout"
                        style="@style/Models16Text"
                        android:layout_width="0dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="4dp"
                        android:maxLines="3"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/placeAboutLabel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. iiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiiii"/>

                    <LinearLayout
                        android:id="@+id/placeReadMore"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:orientation="horizontal"
                        app:layout_constraintBottom_toBottomOf="@+id/placeAbout"
                        app:layout_constraintEnd_toEndOf="@+id/placeAbout" >
                        <View
                            android:layout_width="16dp"
                            android:layout_height="24dp"
                            android:background="@drawable/shadow_horizontal" />
                        <TextView
                            android:id="@+id/placeShowMore"
                            style="@style/Models16BoldText"
                            android:paddingStart="4dp"
                            android:textColor="@color/nice_pink"
                            android:layout_width="wrap_content"
                            android:background="@android:color/white"
                            android:layout_height="wrap_content"
                            android:text="@string/show_more" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/placeAboutRv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clipToPadding="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeAbout" />

                    <View
                        android:id="@+id/separatorThree"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/divider"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeAboutRv"
                        tools:visibility="visible" />
                </androidx.constraintlayout.widget.ConstraintLayout>

<!--////////// Requirements //////////-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/placeRequirementsCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    tools:visibility="gone"
                    android:clipChildren="false"
                    android:paddingBottom="20dp" >

                    <TextView
                        android:id="@+id/placeRequirementsLabel"
                        style="@style/Models16Text"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/requirements" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/placeRequirementsRv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clipToPadding="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeRequirementsLabel" />

                    <View
                        android:id="@+id/separatorFour"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/divider"
                        android:visibility="gone"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeRequirementsRv"
                        tools:visibility="visible" />
                </androidx.constraintlayout.widget.ConstraintLayout>

<!--////////// Calendar //////////-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/placeCalendarCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    tools:visibility="gone"
                    android:clipChildren="false"
                    android:paddingBottom="20dp" >

                    <TextView
                        android:id="@+id/placeBookingMonth"
                        style="@style/Models16Text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:text="SEPTEMBER 2019"
                        android:textAllCaps="true" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/placeBookingCalendar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        android:scrollbars="none"
                        tools:background="@color/gray_hint"
                        tools:layout_height="50dp"
                        android:nestedScrollingEnabled="false"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeBookingMonth" />

                    <TextView
                        android:id="@+id/placeTimeframesLabel"
                        style="@style/Models16Text"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/placeBookingCalendar"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/timeframes" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/placeIntervalsRv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clipToPadding="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:overScrollMode="never"
                        tools:background="@color/gray_hint"
                        tools:layout_height="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeTimeframesLabel" />

                </androidx.constraintlayout.widget.ConstraintLayout>

<!--////////// Offers //////////-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/placeOffersCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:paddingBottom="20dp" >

                    <TextView
                        android:id="@+id/placeOffersLabel"
                        style="@style/Models16Text"
                        android:layout_marginTop="20dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/offers" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/placeOffersRv"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:clipToPadding="false"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:overScrollMode="never"
                        tools:background="@color/gray_hint"
                        tools:layout_height="50dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/placeOffersLabel" />
                </androidx.constraintlayout.widget.ConstraintLayout>

<!--////////// Booking //////////-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/placeBookingCl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:clipChildren="false"
                    android:paddingBottom="20dp" >

                    <View
                        android:id="@+id/separatorBooking"
                        android:layout_width="match_parent"
                        android:layout_height="1.5dp"
                        android:layout_marginTop="20dp"
                        android:background="@color/divider"
                        android:visibility="gone"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                 <ImageView
                     android:id="@+id/placeBookingImv"
                     android:layout_width="42dp"
                     android:layout_height="42dp"
                     android:src="@drawable/ic_timer"
                     android:layout_marginTop="20dp"
                     android:layout_marginStart="20dp"
                     app:layout_constraintTop_toBottomOf="@id/separatorBooking"
                     app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/placeBookingDate"
                        style="@style/Models16Text"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/placeBookingImv"
                        app:layout_constraintStart_toEndOf="@+id/placeBookingImv"
                        tools:text="Monday, May 7th" />

                    <TextView
                        android:id="@+id/placeBookingText"
                        style="@style/Models14BoldText"
                        android:layout_marginStart="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_timeframe"
                        app:layout_constraintStart_toEndOf="@+id/placeBookingImv"
                        app:layout_constraintBottom_toBottomOf="@+id/placeBookingImv" />

                    <Button
                        android:id="@+id/placeBookingBtn"
                        style="@style/Models16Text"
                        android:layout_width="112dp"
                        android:layout_height="56dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginEnd="20dp"
                        android:background="@drawable/nice_button_red_pink_alpha"
                        android:text="@string/book_now"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:enabled="false"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/placeBookingImv" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>