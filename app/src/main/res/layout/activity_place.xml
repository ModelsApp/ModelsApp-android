                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="@+id/placeAboutLabel" />

                            <LinearLayout
                                android:id="@+id/placeReadMore"
                                android:layout_width="wrap_content"
                                android:layout_height="24dp"
                                android:orientation="horizontal"
                                app:layout_constraintBottom_toBottomOf="@+id/placeAbout"
                                app:layout_constraintEnd_toEndOf="@+id/placeAbout">

                                <View
                                    android:layout_width="16dp"
                                    android:layout_height="24dp"
                                    android:background="@drawable/shadow_horizontal" />

                                <TextView
                                    android:id="@+id/placeShowMore"
                                    style="@style/Models16BoldText"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:gravity="center_vertical"
                                    android:background="@android:color/white"
                                    android:paddingStart="4dp"
                                    android:text="@string/show_more"
                                    android:textColor="@color/nice_pink" />
                            </LinearLayout>

