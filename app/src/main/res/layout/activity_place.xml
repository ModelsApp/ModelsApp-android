                            <TextView
                                android:id="@+id/placeAbout"
                                style="@style/Models16Text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:layout_marginTop="16dp"
                                android:layout_marginEnd="@dimen/ac_place_default_margin"
                                android:layout_marginBottom="20dp"
                                android:lineSpacingExtra="4dp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeAboutLabel"
