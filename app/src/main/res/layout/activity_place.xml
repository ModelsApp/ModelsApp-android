                                android:overScrollMode="never"
                                android:paddingStart="@dimen/ac_place_default_margin"
                                android:paddingEnd="@dimen/ac_place_default_margin"
                                android:visibility="gone"
                                tools:visibility="visible"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeProgress"
                                tools:background="@color/gray_hint"
                                tools:layout_height="50dp" />

                            <TextView
                                android:id="@+id/placeIntervalsEmpty"
                                style="@style/Models18Text"
                                android:layout_width="0dp"
                                android:layout_height="80dp"
                                android:layout_marginTop="16dp"
                                android:background="@drawable/referral_field_background"
                                android:backgroundTint="@color/gray_light"
                                android:gravity="center"
                                android:text="@string/cant_use_square"
                                android:textColor="@color/blueish_gray"
                                android:visibility="gone"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeProgress" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

<!-- ////////// Offers //////////-->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/placeOffersCl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            tools:visibility="gone"
                            android:clipChildren="false"
                            android:clipToPadding="false"
                            android:paddingBottom="20dp" >

                            <TextView
                                android:id="@+id/placeOffersLabel"
                                style="@style/Models16Text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/ac_place_default_margin"
                                android:text="@string/offers"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/placeOffersRv"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:clipToPadding="false"
                                android:overScrollMode="never"
                                android:paddingStart="@dimen/ac_place_default_margin"
                                android:paddingEnd="@dimen/ac_place_default_margin"
                                android:nestedScrollingEnabled="false"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeOffersLabel"
                                tools:background="@color/gray_hint"
                                tools:layout_height="50dp" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/placeBookingCl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_80dp"
        android:layout_gravity="bottom"
        android:clipChildren="false"
        android:background="@android:color/white"
        app:layout_anchorGravity="bottom"
        android:clipToPadding="false" >

        <View
            android:id="@+id/separatorBooking"
            android:layout_width="0dp"
            android:layout_height="1.5dp"
            android:alpha="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/divider"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/ac_place_default_margin"
                android:layout_marginEnd="@dimen/v_28dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="@+id/placeBookingBtn"
                app:layout_constraintBottom_toBottomOf="@+id/placeBookingBtn"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/placeBookingBtn" >

                <TextView
                    android:id="@+id/placeBookingDate"
                    style="@style/Models14SemiBoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:ellipsize="end"
                    android:maxLines="2"
                    tools:text="Monday, May 7th" />

                <TextView
                    android:id="@+id/placeBookingText"
                    style="@style/Models14SemiBoldText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:hint="@string/make_your_selection"
                    android:maxLines="1"
                    android:textColorHint="@color/gray_hint_light" />
            </LinearLayout>

            <Button
                android:id="@+id/placeBookingBtn"
                style="@style/Models15Text"
                android:layout_width="@dimen/v_128dp"
                android:layout_height="@dimen/v_48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginEnd="@dimen/ac_place_default_margin"
                android:background="@drawable/button_rounded_enabled_disabled"
                android:enabled="false"
                android:text="@string/book_now"
                android:textAllCaps="false"
                android:textColor="@color/color_btn_enabled_disabled" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>