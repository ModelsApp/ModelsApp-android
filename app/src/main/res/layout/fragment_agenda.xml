<!--            app:layout_constraintTop_toTopOf="@+id/icInfo" />-->

<!--        <ImageView-->
<!--            android:id="@+id/icSearch"-->
<!--            android:layout_width="@dimen/v_24dp"-->
<!--            android:layout_height="@dimen/v_24dp"-->
<!--            android:layout_marginEnd="@dimen/v_16dp"-->
<!--            android:src="@drawable/ic_search"-->
<!--            android:background="?attr/selectableItemBackgroundBorderless"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/icInfo"-->
<!--            app:layout_constraintEnd_toStartOf="@+id/icCalendar"-->
<!--            app:layout_constraintTop_toTopOf="@+id/icInfo" />-->

        <com.square.android.utils.widget.PoppinsTabLayout
            android:id="@+id/agendaTabs"
            android:layout_width="0dp"
            android:layout_height="@dimen/v_42dp"
            android:layout_marginTop="@dimen/v_16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/agendaDate"
            app:tabBackground="@android:color/transparent"
            app:tabSelectedTextColor="@android:color/black"
            app:tabRippleColor="@android:color/transparent"
            app:tabTextAppearance="@style/TabText"
            app:tabIndicator="@drawable/tab_indicator_1dp"
            app:tabIndicatorColor="@android:color/black"
            app:tabMode="fixed"
            app:tabMinWidth="0dp"
            app:tabTextColor="@color/gray_disabled" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="@dimen/v_1dp"
        android:background="@color/gray_divider"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topContainer" />

    <com.square.android.utils.widget.PagingViewPager
        android:id="@+id/agendaPager"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>