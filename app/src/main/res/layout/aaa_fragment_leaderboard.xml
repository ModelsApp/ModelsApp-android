<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: Cover whole screen with this layout, including status bar - see: StartActivity - onCreate() - ActivityUtils.setTransparentStatusAndDrawBehind  -->

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:clipToPadding="false"
    android:fitsSystemWindows="false" >

    <!--  top 3 container  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/topLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/leaderboard_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/userContainer" >

        <ImageView
            android:id="@+id/imgFirstPlace"
            android:layout_width="@dimen/top1ImgSize"
            android:layout_height="@dimen/top1ImgSize"
            android:layout_marginTop="@dimen/firstPlaceMarginTop"
            android:background="@drawable/rounded_background_white"
            android:padding="1.5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hashtag"
            tools:src="@drawable/rounded_background_white"
            tools:tint="@color/nice_pink" />

        <!--   TODO rounded corners(16dp? 24dp? IN PIXELS) - same with white border   -->
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="@dimen/top1MedalWidth"
            android:layout_height="@dimen/top1MedalHeight"
            app:layout_constraintEnd_toEndOf="@+id/imgFirstPlace"
            app:layout_constraintStart_toStartOf="@+id/imgFirstPlace"
            app:layout_constraintTop_toBottomOf="@+id/imgFirstPlace"
            tools:src="@color/nice_purple" />

        <ImageView
            android:id="@+id/imgSecondPlace"
            android:layout_width="@dimen/top2ImgSize"
            android:layout_height="@dimen/top2ImgSize"
            android:background="@drawable/rounded_background_white"
            android:padding="1.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgFirstPlace"
            app:layout_constraintEnd_toStartOf="@+id/imgFirstPlace"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imgFirstPlace"
            tools:src="@drawable/rounded_background_white"
            tools:tint="@color/nice_pink" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/top2MedalWidth"
            android:layout_height="@dimen/top2MedalHeight"
            app:layout_constraintEnd_toEndOf="@+id/imgSecondPlace"
            app:layout_constraintStart_toStartOf="@+id/imgSecondPlace"
            app:layout_constraintTop_toBottomOf="@+id/imgSecondPlace"
            tools:src="@color/nice_purple" />

        <ImageView
            android:id="@+id/imgThirdPlace"
            android:layout_width="@dimen/top3ImgSize"
            android:layout_height="@dimen/top3ImgSize"
            android:background="@drawable/rounded_background_white"
            android:padding="1.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/imgFirstPlace"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imgFirstPlace"
            app:layout_constraintTop_toTopOf="@+id/imgFirstPlace"
            tools:src="@drawable/rounded_background_white"
            tools:tint="@color/nice_pink" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="@dimen/top3MedalWidth"
            android:layout_height="@dimen/top3MedalHeight"
            app:layout_constraintEnd_toEndOf="@+id/imgThirdPlace"
            app:layout_constraintStart_toStartOf="@+id/imgThirdPlace"
            app:layout_constraintTop_toBottomOf="@+id/imgThirdPlace"
            tools:src="@color/nice_purple" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="@dimen/backImgSize"
            android:layout_height="@dimen/backImgSize"
            android:layout_marginStart="20dp"
            android:layout_marginTop="@dimen/topArrowMargin"
            android:src="@drawable/arrow_back"
            android:tint="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/hashtag"
            style="@style/Models14SemiBoldText"
            android:textSize="@dimen/hashtagTextSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="@dimen/firstPlaceMarginTop"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:text="#releaseyoursweat" />

        <TextView
            android:id="@+id/nameFirstPlace"
            style="@style/Models14SemiBoldText"
            android:textSize="@dimen/topUserNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxWidth="88dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            android:gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="@+id/imgFirstPlace"
            app:layout_constraintStart_toStartOf="@+id/imgFirstPlace"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:text="Tim Harder" />

        <TextView
            android:id="@+id/votesFirstPlace"
            style="@style/Models12Text"
            android:textSize="@dimen/topUserScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/nameFirstPlace"
            app:layout_constraintStart_toStartOf="@+id/nameFirstPlace"
            app:layout_constraintTop_toBottomOf="@+id/nameFirstPlace"
            tools:text="160 Votes" />

        <TextView
            android:id="@+id/nameSecondPlace"
            style="@style/Models14SemiBoldText"
            android:textSize="@dimen/topUserNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="88dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imgSecondPlace"
            app:layout_constraintStart_toStartOf="@+id/imgSecondPlace"
            app:layout_constraintTop_toBottomOf="@+id/imageView4"
            tools:text="Lisa Guti" />

        <TextView
            android:id="@+id/votesSecondPlace"
            style="@style/Models12Text"
            android:textSize="@dimen/topUserScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/nameSecondPlace"
            app:layout_constraintStart_toStartOf="@+id/nameSecondPlace"
            app:layout_constraintTop_toBottomOf="@+id/nameSecondPlace"
            tools:text="110 Votes" />

        <TextView
            android:id="@+id/nameThirdPlace"
            style="@style/Models14SemiBoldText"
            android:textSize="@dimen/topUserNames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxWidth="88dp"
            android:maxLines="1"
            android:textColor="@android:color/white"
            app:autoSizeTextType="uniform"
            app:layout_constraintEnd_toEndOf="@+id/imgThirdPlace"
            app:layout_constraintStart_toStartOf="@+id/imgThirdPlace"
            app:layout_constraintTop_toBottomOf="@+id/imageView5"
            tools:text="Lisa Guti" />

        <TextView
            android:id="@+id/votesThirdPlace"
            style="@style/Models12Text"
            android:textSize="@dimen/topUserScores"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/nameThirdPlace"
            app:layout_constraintStart_toStartOf="@+id/nameThirdPlace"
            app:layout_constraintTop_toBottomOf="@+id/nameThirdPlace"
            tools:text="110 Votes" />

        <TextView
            android:id="@+id/placeName"
            style="@style/Models18SemiBoldText"
            android:textSize="@dimen/titleTextSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="24dp"
            android:gravity="center_vertical"
            android:includeFontPadding="false"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            tools:text="Emporio Armani" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="@dimen/leaderBoardGuidelineVerticalPercentage" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvScores"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="@dimen/leaderBoardRvPAddingHorizontal"
        android:paddingEnd="@dimen/leaderBoardRvPAddingHorizontal"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        tools:listitem="@layout/aaa_item_leaderboard"
        tools:itemCount="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userContainer" />

<!--  user's position in ranking  -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/userContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:paddingStart="@dimen/userContainerSidePadding"
        android:paddingTop="8dp"
        android:paddingEnd="@dimen/userContainerSidePadding"
        android:paddingBottom="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/guideline11" >

        <ImageView
            android:id="@+id/userImg"
            android:layout_width="@dimen/userRankingImgSize"
            android:layout_height="@dimen/userRankingImgSize"
            android:layout_marginStart="8dp"
            android:background="@drawable/round_background"
            android:backgroundTint="@color/nice_pink"
            android:padding="1.5dp"
            app:layout_constraintBottom_toBottomOf="@+id/userPositionTv"
            app:layout_constraintStart_toEndOf="@id/userPositionTv"
            app:layout_constraintTop_toTopOf="@+id/userPositionTv"
            tools:src="@drawable/round_background"
            tools:tint="@color/nice_pink_alpha_10" />

        <TextView
            android:id="@+id/userPositionTv"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/userRankingPrimaryTexSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:minWidth="38dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="45" />

        <TextView
            android:id="@+id/userName"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/userRankingPrimaryTexSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:ellipsize="end"
            android:maxLines="1"
            app:layout_constraintBottom_toBottomOf="@+id/userImg"
            app:layout_constraintEnd_toStartOf="@+id/userVotes"
            app:layout_constraintStart_toEndOf="@+id/userImg"
            app:layout_constraintTop_toTopOf="@+id/userImg"
            tools:text="Thomas Hard" />

        <TextView
            style="@style/Models14Text"
            android:textSize="@dimen/userRankingSecondaryTexSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:text="@string/you"
            android:textColor="@color/gray_hint"
            app:layout_constraintStart_toStartOf="@+id/userName"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <TextView
            android:id="@+id/userVotes"
            style="@style/Models16SemiBoldText"
            android:textSize="@dimen/userRankingPrimaryTexSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/userName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/userName"
            tools:text="10 Votes" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        android:background="@drawable/shadow_vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userContainer" />

</androidx.constraintlayout.widget.ConstraintLayout>