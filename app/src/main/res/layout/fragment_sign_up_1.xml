<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_height="match_parent"
    android:paddingStart="@dimen/v_24dp"
    android:paddingEnd="@dimen/v_24dp"
    android:orientation="vertical"
    tools:background="@android:color/white" >

    <!--  redesigned default spinner     -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rv_height"
        android:layout_marginTop="@dimen/v_24dp" >
<!--   TODO: this view onClick -> call spinner onClick  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/et_bg_rounded_stroke"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" >
            <androidx.appcompat.widget.AppCompatSpinner
                style="@style/RedesignedSpinner"
                android:id="@+id/spinnerNationality"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown" />

            <ImageView style="@style/RedesignedSpinnerArrow" />

        </LinearLayout>
        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/nationality" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v_24dp"
        android:orientation="horizontal" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_rv_height"
            android:layout_weight="0.5"
            android:layout_marginEnd="@dimen/v_12dp" >
            <com.square.android.utils.widget.ErrorEditText
                style="@style/RedesignedInputField"
                android:id="@+id/etDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date" />
            <TextView
                style="@style/RedesignedFieldHeader"
                android:text="@string/hint_birth" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/v_12dp"
            android:layout_height="@dimen/et_rv_height" >
            <!--   TODO: this view onClick -> call spinner onClick  -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/et_bg_rounded_stroke"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" >
                <androidx.appcompat.widget.AppCompatSpinner
                    style="@style/RedesignedSpinner"
                    android:id="@+id/spinnerGender"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <ImageView style="@style/RedesignedSpinnerArrow" />

            </LinearLayout>
            <TextView
                style="@style/RedesignedFieldHeader"
                android:text="@string/hint_gender" />
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rv_height"
        android:layout_marginTop="@dimen/v_24dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/et_bg_rounded_stroke"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/spinnerMobile"
                    style="@style/RedesignedSpinner"
                    android:paddingEnd="@dimen/v_2dp"
                    tools:layout_width="48dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <ImageView
                    android:layout_width="@dimen/v_12dp"
                    android:layout_height="@dimen/v_12dp"
                    android:src="@drawable/spinner_arrow_selector_black"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/etMobileNumber"
                style="@style/RedesignedInputField"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:digits="0123456789" />

        </LinearLayout>

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/mobile_number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rv_height"
        android:layout_marginTop="@dimen/v_24dp" >
        <com.square.android.utils.widget.ErrorEditText
            style="@style/RedesignedInputField"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/email_label" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rv_height"
        android:layout_marginTop="@dimen/v_24dp" >

       <com.square.android.utils.widget.ErrorEditText
           style="@style/RedesignedInputField"
           android:id="@+id/et_password"
           android:paddingEnd="@dimen/v_56dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="textPassword" />

<!--   TODO: change drawable to the correct one     -->
        <ImageView
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_16dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/r_shop"
            android:layout_alignTop="@+id/et_password"
            android:layout_alignBottom="@+id/et_password" />

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/password_label" />
    </RelativeLayout>

</LinearLayout>