<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:padding="@dimen/v_24dp"
    android:orientation="vertical"
    tools:background="@android:color/white" >

    <!--  redesigned default spinner     -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/nationalityError"
            style="@style/RedesignedSpinnerError"
            tools:visibility="visible"
            android:text="@string/select_nationality" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_rl_height" >
            <!--   TODO: this view onClick -> call spinner onClick  -->
            <LinearLayout
                android:id="@+id/nationalityLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/et_bg_rounded_stroke"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" >
                <androidx.appcompat.widget.AppCompatSpinner
                    style="@style/RedesignedSpinner"
                    android:id="@+id/spinnerNationality"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <ImageView style="@style/RedesignedSpinnerArrow" />

            </LinearLayout>
            <TextView
                style="@style/RedesignedFieldHeader"
                android:text="@string/nationality" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v_24dp"
        android:gravity="bottom"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="@dimen/v_12dp"
            android:layout_weight="0.5" >

            <TextView
                android:id="@+id/dateOfBirthError"
                style="@style/RedesignedSpinnerError"
                tools:visibility="visible"
                android:text="@string/select_date_of_birth" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/et_rl_height"
            android:layout_weight="0.5" >
            <TextView
                style="@style/RedesignedInputField"
                android:id="@+id/tvDateOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                style="@style/RedesignedFieldHeader"
                android:text="@string/hint_birth" />
        </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.5"
            android:layout_marginStart="@dimen/v_12dp" >

            <TextView
                android:id="@+id/genderError"
                style="@style/RedesignedSpinnerError"
                tools:visibility="visible"
                android:text="@string/select_gender" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/et_rl_height" >
            <!--   TODO: this view onClick -> call spinner onClick  -->
            <LinearLayout
                android:id="@+id/genderLl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/et_bg_rounded_stroke"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true" >
                <androidx.appcompat.widget.AppCompatSpinner
                    style="@style/RedesignedSpinner"
                    android:id="@+id/spinnerGender"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dropdown" />

                <ImageView style="@style/RedesignedSpinnerArrow" />

            </LinearLayout>
            <TextView
                style="@style/RedesignedFieldHeader"
                android:text="@string/hint_gender" />
        </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rl_height"
        android:layout_marginTop="@dimen/v_24dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/et_bg_rounded_stroke"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:id="@+id/dialCodeLl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/auth_btn_height"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dialFlag"
                    android:layout_width="@dimen/v_24dp"
                    android:layout_height="@dimen/v_24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/v_4dp"
                    android:layout_marginStart="@dimen/v_16dp"
                    tools:src="@drawable/flag_ac" />

                <TextView
                    android:id="@+id/dialCode"
                    style="@style/Models13Text"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+1" />

                <ImageView
                    android:layout_width="@dimen/v_12dp"
                    android:layout_height="@dimen/v_12dp"
                    android:layout_marginStart="@dimen/v_2dp"
                    android:src="@drawable/spinner_arrow_selector_black"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/etMobileNumber"
                style="@style/RedesignedInputField"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:digits="0123456789" />

        </LinearLayout>

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/mobile_number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rl_height"
        android:layout_marginTop="@dimen/v_24dp" >
        <com.square.android.utils.widget.ErrorEditText
            style="@style/RedesignedInputField"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress" />

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/email_label" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rl_height"
        android:layout_marginTop="@dimen/v_24dp" >

       <com.square.android.utils.widget.ErrorEditText
           style="@style/RedesignedInputField"
           android:id="@+id/et_password"
           android:paddingEnd="@dimen/v_56dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:inputType="textPassword" />

<!--   TODO clicking this icon will show/hide password? (change inputType = textVisiblePassword or textPassword)    -->
        <ImageView
            android:id="@+id/passwordIcon"
            android:layout_width="@dimen/v_40dp"
            android:layout_height="@dimen/v_24dp"
            android:paddingEnd="@dimen/v_16dp"
            android:paddingStart="@dimen/v_4dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_visibility_off"
            android:tint="@android:color/black"
            android:layout_alignTop="@+id/et_password"
            android:layout_alignBottom="@+id/et_password" />

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/password_label" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rl_height"
        android:layout_marginTop="@dimen/v_24dp" >
        <com.square.android.utils.widget.ErrorEditText
            style="@style/RedesignedInputField"
            android:id="@+id/et_referral"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="text" />

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/referral_code_optional" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/v_16dp"
        android:clipToPadding="true"
        android:clipChildren="false"
        android:layout_marginStart="@dimen/signup_checkbox_margin_start"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/termsError"
            style="@style/RedesignedSpinnerError"
            android:layout_marginBottom="@dimen/v_4dp"
            tools:visibility="visible"
            android:layout_marginStart="@dimen/signup_checkbox_margin_start_positive"
            android:text="@string/accept_terms" />

    <LinearLayout
        android:id="@+id/termsCbLl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_48dp"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/termsCb"
            android:layout_width="@dimen/signup_checkbox_size"
            android:layout_height="@dimen/signup_checkbox_size"
            android:scaleX="@dimen/signup_checkbox_scale"
            android:scaleY="@dimen/signup_checkbox_scale"
            android:buttonTint="@color/checkbox_colors" />

<!--   TODO spannable "Terms and Conditions" and "Privacy policy" - color black
       TODO if spannable clicked - open link, else - trigger checkbox -->
        <TextView
            style="@style/Models13Text"
            android:textSize="@dimen/text_13"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/v_2dp"
            android:paddingTop="@dimen/signup_checkbox_text_padding_top"
            android:lineSpacingExtra="@dimen/v_3dp"
            android:text="@string/terms_privacy_text"
            android:textColor="@color/text_gray" />

     </LinearLayout>
    </LinearLayout>

</LinearLayout>