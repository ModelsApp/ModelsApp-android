<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:paddingStart="@dimen/v_24dp"
    android:paddingEnd="@dimen/v_24dp"
    android:paddingTop="@dimen/v_24dp"
    android:paddingBottom="@dimen/v_14dp"
    android:orientation="vertical"
    tools:background="@android:color/white" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rl_height" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/et_bg_rounded_stroke"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true" >

            <LinearLayout
                android:id="@+id/dialCodeLl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/auth_btn_height"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/dialFlag"
                    android:layout_width="@dimen/v_24dp"
                    android:layout_height="@dimen/v_24dp"
                    android:layout_gravity="center"
                    android:layout_marginEnd="@dimen/v_4dp"
                    android:layout_marginStart="@dimen/v_16dp"
                    tools:src="@drawable/flag_ac" />

                <TextView
                    android:id="@+id/dialCode"
                    style="@style/Models13Text"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/text_13"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="+1" />

                <ImageView
                    android:layout_width="@dimen/v_12dp"
                    android:layout_height="@dimen/v_12dp"
                    android:layout_marginStart="@dimen/v_2dp"
                    android:src="@drawable/spinner_arrow_selector_black"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <com.square.android.utils.widget.ErrorEditText
                android:id="@+id/etMobileNumber"
                style="@style/RedesignedInputField"
                android:background="@null"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:digits="0123456789" />

        </LinearLayout>

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/mobile_number" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/et_rl_height"
        android:layout_marginTop="@dimen/v_24dp" >
        <com.square.android.utils.widget.ErrorEditText
            style="@style/RedesignedInputField"
            android:id="@+id/et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress" />

        <TextView
            style="@style/RedesignedFieldHeader"
            android:text="@string/email_label" />
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/v_24dp"
        android:layout_marginStart="@dimen/v_minus_24dp"
        android:layout_marginEnd="@dimen/v_minus_24dp"
        android:layout_height="@dimen/v_1dp"
        android:background="@color/gray_divider" />

    <LinearLayout
        android:id="@+id/changePasswordLl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/v_48dp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/v_14dp"
        android:layout_marginEnd="@dimen/v_minus_8dp"
        android:gravity="center_vertical" >

        <ImageView
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:src="@drawable/r_shop"
            android:scaleType="fitCenter" />

        <TextView
            style="@style/Models16Text"
            android:textSize="@dimen/text_16"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/v_12dp"
            android:layout_marginEnd="@dimen/v_12dp"
            android:text="@string/change_password" />

        <ImageView
            android:layout_width="@dimen/v_24dp"
            android:layout_height="@dimen/v_24dp"
            android:src="@drawable/chevron_right"
            android:tint="@color/text_gray"
            android:stateListAnimator="@animator/alpha_pressed_anim" />

    </LinearLayout>

</LinearLayout>