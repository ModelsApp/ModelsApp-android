<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/placeRoot"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/v_minus_16dp"
        app:cardCornerRadius="@dimen/v_16dp"
        app:cardElevation="0dp"
        app:cardUseCompatPadding="false"
        android:background="@android:color/transparent" >

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:background="@android:color/white"
            android:layout_marginBottom="@dimen/v_16dp"
            android:layout_height="match_parent" >

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/placeAppBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:id="@+id/placeCollapsing"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    app:contentScrim="@android:color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed|snap" >

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_collapseMode="parallax" >

                        <ImageView
                            android:id="@+id/placeMainImage"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/toolbar_image_height"
                            android:scaleType="centerCrop"
                            android:fitsSystemWindows="true"
                            android:background="@color/placeholder"
                            tools:src="@drawable/fill_profile_header_1" />
                    </FrameLayout>

                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/placeToolbar"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/toolbarHeight"
                        app:contentInsetStart="0dp"
                        app:layout_collapseMode="pin"
                        app:title="@null"
                        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >

                        <ImageView
                            android:id="@+id/placeArrowCollapse"
                            android:layout_width="@dimen/backArrowSize"
                            android:layout_height="@dimen/backArrowSize"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:layout_marginStart="@dimen/backArrowMarginStart"
                            android:src="@drawable/ic_arrow_down"
                            android:tint="@android:color/white" />
                    </androidx.appcompat.widget.Toolbar>

                    <FrameLayout
                        android:id="@+id/roundedView"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/v_44dp"
                        android:layout_gravity="bottom"
                        android:background="@drawable/bg_rounded_top_24dp" >
                        <View
                            android:id="@+id/topIcon"
                            android:layout_width="@dimen/v_32dp"
                            android:layout_height="@dimen/v_4dp"
                            android:layout_marginTop="@dimen/v_12dp"
                            android:layout_gravity="center_horizontal|top"
                            android:background="@drawable/background_rounded_max"
                            android:backgroundTint="@color/gray_btn_disabled"/>
                    </FrameLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_gravity="bottom">

                        <TextView
                            android:id="@+id/placeName"
                            style="@style/Models18SemiBoldText"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="@dimen/ac_place_default_margin"
                            android:layout_marginEnd="@dimen/ac_place_default_margin"
                            android:includeFontPadding="false"
                            android:gravity="center_vertical"
                            android:background="@android:color/transparent"
                            tools:text="Le Cristalline Le Cristalline" />

                        <LinearLayout
                            android:id="@+id/ratingLl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="@dimen/v_20dp"
                            android:paddingTop="@dimen/v_2dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >
                            <ImageView
                                android:id="@+id/star"
                                android:layout_width="@dimen/v_16dp"
                                android:layout_height="@dimen/v_16dp"
                                android:layout_marginEnd="@dimen/v_4dp"
                                android:src="@drawable/star_yellow"
                                android:tint="@color/text_gray" />

                            <TextView
                                android:id="@+id/rating"
                                style="@style/Models14SemiBoldText"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="bottom"
                                android:textColor="@color/text_gray"
                                tools:text="4.5" />
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>

            <!--  app:layout_behavior="@string/appbar_scrolling_view_behavior"  -->
            <com.square.android.utils.widget.LockableScrollView
                android:id="@+id/placeNested"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:background="@android:color/white"
                android:paddingBottom="@dimen/bottomContainerHeight"
                android:overScrollMode="never"
                android:scrollbars="none"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" >

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <!--////////// Location //////////-->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/placeAddressCl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:paddingBottom="@dimen/v_16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" >

                        <FrameLayout
                            android:id="@+id/iconContainer"
                            android:layout_width="@dimen/v_52dp"
                            android:layout_height="@dimen/v_52dp"
                            android:layout_marginTop="@dimen/v_16dp"
                            android:background="@drawable/background_rounded_12dp"
                            android:backgroundTint="@color/gray_divider"
                            app:layout_constraintEnd_toStartOf="@id/endGuideline"
                            app:layout_constraintTop_toTopOf="parent">
                            <ImageView
                                android:layout_width="@dimen/v_24dp"
                                android:layout_height="@dimen/v_24dp"
                                android:src="@drawable/ic_pin"
                                android:layout_gravity="center" />
                        </FrameLayout>

                        <ImageView
                            android:id="@+id/imvAddress"
                            android:layout_width="@dimen/v_20dp"
                            android:layout_height="@dimen/v_20dp"
                            android:src="@drawable/r_pin"
                            app:layout_constraintTop_toTopOf="@+id/iconContainer"
                            app:layout_constraintStart_toEndOf="@id/startGuideline" />

                        <TextView
                            android:id="@+id/placeAddress"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/v_24dp"
                            android:layout_marginStart="@dimen/v_8dp"
                            style="@style/Models15Text"
                            tools:text="Via Vigenavo 13, Milan"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="@+id/imvAddress"
                            app:layout_constraintBottom_toBottomOf="@+id/imvAddress"
                            app:layout_constraintStart_toEndOf="@+id/imvAddress"
                            app:layout_constraintEnd_toStartOf="@+id/iconContainer" />

                        <ImageView
                            android:id="@+id/imvDistance"
                            android:layout_width="@dimen/v_20dp"
                            android:layout_height="@dimen/v_20dp"
                            android:src="@drawable/r_sign"
                            app:layout_constraintBottom_toBottomOf="@+id/iconContainer"
                            app:layout_constraintStart_toEndOf="@id/startGuideline" />

                        <TextView
                            android:id="@+id/placeDistance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/v_24dp"
                            android:layout_marginStart="@dimen/v_8dp"
                            style="@style/Models15Text"
                            tools:text="3.5 km"
                            android:maxLines="1"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="@+id/imvDistance"
                            app:layout_constraintBottom_toBottomOf="@+id/imvDistance"
                            app:layout_constraintStart_toEndOf="@+id/imvDistance"
                            app:layout_constraintEnd_toStartOf="@+id/iconContainer" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/startGuideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="@dimen/v_20dp" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/endGuideline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_end="@dimen/v_20dp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

