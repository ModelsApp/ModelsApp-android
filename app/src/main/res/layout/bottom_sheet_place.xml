                            <View
                                android:id="@+id/separatorThree"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/v_1_5dp"
                                android:layout_marginTop="@dimen/v_20dp"
                                android:background="@color/divider"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@+id/placeAbout" />

                            <ImageView
                                android:id="@+id/aboutMore"
                                android:layout_width="@dimen/v_20dp"
                                android:layout_height="@dimen/v_20dp"
                                android:src="@drawable/r_address"
                                tools:visibility="visible"
                                android:visibility="gone"
                                app:layout_constraintStart_toStartOf="@+id/separatorThree"
                                app:layout_constraintEnd_toEndOf="@id/separatorThree"
                                app:layout_constraintTop_toTopOf="@id/separatorThree"
                                app:layout_constraintBottom_toBottomOf="@id/separatorThree" />

                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!--////////// Details //////////-->
                        <androidx.constraintlayout.widget.ConstraintLayout
