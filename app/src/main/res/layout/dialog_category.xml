<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/v_12dp"
    app:cardElevation="0dp"
    android:clipToPadding="false"
    android:clipChildren="false"
    app:cardUseCompatPadding="false"
    android:background="@android:color/white" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/v_20dp"
        android:paddingBottom="@dimen/v_24dp"
        android:background="@android:color/white" >

        <ImageView
            android:id="@+id/icClose"
            android:layout_width="@dimen/v_32dp"
            android:layout_height="@dimen/v_32dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:padding="@dimen/v_2dp"
            android:src="@drawable/close_x"
            android:layout_gravity="end" />

        <TextView
            android:id="@+id/titleTv"
            style="@style/Models18SemiBoldText"
            android:textSize="@dimen/text_18"
            android:layout_marginTop="@dimen/v_8dp"
            android:layout_marginStart="@dimen/v_24dp"
            android:layout_marginEnd="@dimen/v_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/select_categories"
            android:gravity="center_horizontal" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/categoriesRv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:overScrollMode="never"
                android:paddingStart="@dimen/v_20dp"
                android:paddingEnd="@dimen/v_20dp"
                android:layout_marginTop="@dimen/v_16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/titleTv"
                tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_rounded_checkable"
                tools:itemCount="1"/>

        <Button
            android:id="@+id/btnClearAll"
            style="@style/Models16Text"
            android:layout_width="match_parent"
            android:layout_height="@dimen/auth_btn_height"
            android:layout_marginStart="@dimen/v_20dp"
            android:layout_marginEnd="@dimen/v_20dp"
            android:layout_marginTop="@dimen/v_48dp"
            android:background="@drawable/button_black_alpha"
            android:elevation="0dp"
            android:stateListAnimator="@null"
            android:text="@string/clear_all"
            android:enabled="false"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="@dimen/text_16" />

    </LinearLayout>

</androidx.cardview.widget.CardView>






